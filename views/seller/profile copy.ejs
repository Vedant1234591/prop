<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Profile - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/header') %>

    <div class="max-w-4xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages') %>

        <div class="bg-white shadow rounded-lg overflow-hidden">
            <!-- Profile Header -->
            <div class="bg-gradient-to-r from-indigo-500 to-purple-600 px-6 py-8 text-white">
                <div class="flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-6">
                    <!-- Profile Image -->
                    <div class="relative">
                        <% if (user.profileImage && user.profileImage.url) { %>
                            <img src="<%= user.profileImage.url %>" 
                                 alt="<%= user.name %>" 
                                 class="h-24 w-24 rounded-full border-4 border-white shadow-lg object-cover">
                        <% } else { %>
                            <div class="h-24 w-24 bg-white bg-opacity-20 rounded-full border-4 border-white flex items-center justify-center shadow-lg">
                                <i class="fas fa-user text-white text-3xl"></i>
                            </div>
                        <% } %>
                        <form id="profileImageForm" action="/seller/update-profile-image" method="POST" enctype="multipart/form-data" class="absolute bottom-0 right-0">
                            <input type="file" id="profileImageInput" name="profileImage" accept="image/*" class="hidden" onchange="document.getElementById('profileImageForm').submit()">
                            <button type="button" onclick="document.getElementById('profileImageInput').click()" 
                                    class="bg-white text-indigo-600 p-2 rounded-full shadow-lg hover:bg-gray-100 transition duration-300">
                                <i class="fas fa-camera text-sm"></i>
                            </button>
                        </form>
                    </div>
                    
                    <div class="text-center md:text-left">
                        <h1 class="text-2xl font-bold"><%= user.name %></h1>
                        <p class="text-indigo-100"><%= user.email %></p>
                        <p class="text-indigo-100 mt-1">
                            <i class="fas fa-building mr-1"></i>
                            <%= profile.companyName || 'No company name' %>
                        </p>
                        <div class="flex items-center justify-center md:justify-start space-x-4 mt-2">
                            <span class="bg-white bg-opacity-20 px-3 py-1 rounded-full text-sm">
                                <i class="fas fa-star text-yellow-300 mr-1"></i>
                                <%= profile.ratings?.average?.toFixed(1) || '0.0' %> (<%= profile.ratings?.count || 0 %>)
                            </span>
                            <span class="bg-white bg-opacity-20 px-3 py-1 rounded-full text-sm">
                                <i class="fas fa-briefcase mr-1"></i>
                                <%= profile.yearsOfExperience || 0 %> years
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="grid md:grid-cols-3 gap-8 p-6">
                <!-- Left Column - Personal Info -->
                <div class="md:col-span-2 space-y-6">
                    <!-- Basic Information -->
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">Basic Information</h2>
                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                                <p class="text-gray-900 font-medium"><%= user.name %></p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                                <p class="text-gray-900 font-medium"><%= user.email %></p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                                <p class="text-gray-900 font-medium"><%= profile.phone || 'Not provided' %></p>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Company</label>
                                <p class="text-gray-900 font-medium"><%= profile.companyName || 'Not provided' %></p>
                            </div>
                            <% if (profile.taxId) { %>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Tax ID</label>
                                <p class="text-gray-900 font-medium"><%= profile.taxId %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Address -->
                    <% if (profile.address && (profile.address.street || profile.address.city)) { %>
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">Address</h2>
                        <div class="space-y-2">
                            <% if (profile.address.street) { %>
                                <p class="text-gray-900"><%= profile.address.street %></p>
                            <% } %>
                            <p class="text-gray-900">
                                <%= profile.address.city %><%= profile.address.state ? ', ' + profile.address.state : '' %>
                                <%= profile.address.zipCode %>
                            </p>
                            <% if (profile.address.country) { %>
                                <p class="text-gray-900"><%= profile.address.country %></p>
                            <% } %>
                        </div>
                    </div>
                    <% } %>

                    <!-- Bio -->
                    <% if (profile.bio) { %>
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">About Me</h2>
                        <p class="text-gray-700 leading-relaxed"><%= profile.bio %></p>
                    </div>
                    <% } %>

                    <!-- Specializations -->
                    <% if (profile.specialization && profile.specialization.length > 0) { %>
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">Specializations</h2>
                        <div class="flex flex-wrap gap-2">
                            <% profile.specialization.forEach(spec => { %>
                                <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm">
                                    <%= spec %>
                                </span>
                            <% }) %>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Right Column - Stats & Actions -->
                <div class="space-y-6">
                    <!-- Account Status -->
                    <div class="bg-white border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Account Status</h3>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Verification</span>
                                <span class="px-2 py-1 rounded-full text-xs font-medium <%= profile.isVerified ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                    <%= profile.isVerified ? 'Verified' : 'Pending' %>
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Status</span>
                                <span class="px-2 py-1 rounded-full text-xs font-medium <%= profile.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= profile.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Member since</span>
                                <span class="text-gray-900 text-sm"><%= new Date(profile.createdAt).toLocaleDateString() %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Last login</span>
                                <span class="text-gray-900 text-sm"><%= profile.lastLogin ? new Date(profile.lastLogin).toLocaleDateString() : 'Never' %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-white border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
                        <div class="space-y-3">
                            <a href="/seller/find-bids" 
                               class="w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300 text-center block text-sm">
                                <i class="fas fa-search mr-2"></i>Find Bids
                            </a>
                            <a href="/seller/my-bids" 
                               class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition duration-300 text-center block text-sm">
                                <i class="fas fa-list mr-2"></i>My Bids
                            </a>
                            <button onclick="editProfile()" 
                                    class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-300 text-center block text-sm">
                                <i class="fas fa-edit mr-2"></i>Edit Profile
                            </button>
                        </div>
                    </div>

                    <!-- Company Documents -->
                    <div class="bg-white border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Company Documents</h3>
                        <% if (profile.companyDocuments && profile.companyDocuments.length > 0) { %>
                            <div class="space-y-2">
                                <% profile.companyDocuments.forEach(doc => { %>
                                    <div class="flex justify-between items-center p-2 bg-gray-50 rounded">
                                        <div class="flex items-center space-x-2">
                                            <i class="fas fa-file-pdf text-red-500"></i>
                                            <span class="text-sm text-gray-700 truncate max-w-xs"><%= doc.filename || 'Document' %></span>
                                        </div>
                                        <a href="<%= doc.url %>" target="_blank" class="text-indigo-600 hover:text-indigo-700">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-gray-500 text-sm text-center py-4">No documents uploaded</p>
                        <% } %>
                        <form action="/seller/upload-document" method="POST" enctype="multipart/form-data" class="mt-4">
                            <input type="file" name="document" accept=".pdf,.doc,.docx" class="hidden" id="documentInput" onchange="this.form.submit()">
                            <button type="button" onclick="document.getElementById('documentInput').click()" 
                                    class="w-full bg-gray-200 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-300 transition duration-300 text-center text-sm">
                                <i class="fas fa-upload mr-2"></i>Upload Document
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div id="editProfileModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-white rounded-lg p-6 w-full max-w-md mx-4">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Edit Profile</h3>
            <form action="/seller/update-profile" method="POST" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                    <input type="text" name="name" value="<%= user.name %>" required
                           class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                    <input type="tel" name="phone" value="<%= profile.phone || '' %>"
                           class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
                    <input type="text" name="companyName" value="<%= profile.companyName || '' %>"
                           class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Bio</label>
                    <textarea name="bio" rows="3" 
                              class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                              placeholder="Tell us about yourself and your experience..."><%= profile.bio || '' %></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Years of Experience</label>
                    <input type="number" name="yearsOfExperience" value="<%= profile.yearsOfExperience || '' %>" min="0" max="100"
                           class="w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" onclick="closeEditModal()" 
                            class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 transition duration-300">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function editProfile() {
            document.getElementById('editProfileModal').classList.remove('hidden');
        }

        function closeEditModal() {
            document.getElementById('editProfileModal').classList.add('hidden');
        }

        // Close modal when clicking outside
        document.getElementById('editProfileModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeEditModal();
            }
        });
    </script>

    <%- include('../partials/footer') %>
</body>
</html>