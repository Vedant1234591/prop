<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bids - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>
<body class="bg-gray-50">
    <%- include('../partials/header', { 
        user: typeof user !== 'undefined' ? user : {}, 
        currentPage: 'my-bids',
        bidCount: typeof bidCount !== 'undefined' ? bidCount : 0,
        messageCount: 0 
    }) %>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages') %>

        <!-- Real-time Status Header -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <i class="fas fa-sync-alt text-blue-600 mr-2"></i>
                    <span class="text-sm text-blue-700">Real-time bid status updates active • Automatic winner selection enabled</span>
                </div>
                <div class="flex space-x-2">
                    <a href="/seller/update-statuses" 
                       class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition duration-300 flex items-center">
                        <i class="fas fa-sync-alt mr-1"></i>
                        Update Now
                    </a>
                    <span class="text-xs text-blue-600" id="last-updated">
                        Updated just now
                    </span>
                </div>
            </div>
        </div>

        <h1 class="text-3xl font-bold text-gray-900 mb-8">My Bids</h1>

        <!-- Bid Status Tabs -->
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="border-b border-gray-200">
                <nav class="flex -mb-px overflow-x-auto">
                    <button onclick="showTab('submitted')" 
                            class="tab-button py-4 px-6 text-center border-b-2 font-medium text-sm whitespace-nowrap border-indigo-500 text-indigo-600">
                        Submitted (<span id="submitted-count"><%= bids.submitted ? bids.submitted.length : 0 %></span>)
                    </button>
                    <button onclick="showTab('won')" 
                            class="tab-button py-4 px-6 text-center border-b-2 font-medium text-sm whitespace-nowrap border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
                        Won (<span id="won-count"><%= bids.won ? bids.won.length : 0 %></span>)
                    </button>
                    <button onclick="showTab('in-progress')" 
                            class="tab-button py-4 px-6 text-center border-b-2 font-medium text-sm whitespace-nowrap border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
                        In Progress (<span id="in-progress-count"><%= bids['in-progress'] ? bids['in-progress'].length : 0 %></span>)
                    </button>
                    <button onclick="showTab('lost')" 
                            class="tab-button py-4 px-6 text-center border-b-2 font-medium text-sm whitespace-nowrap border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
                        Lost (<span id="lost-count"><%= bids.lost ? bids.lost.length : 0 %></span>)
                    </button>
                    <button onclick="showTab('completed')" 
                            class="tab-button py-4 px-6 text-center border-b-2 font-medium text-sm whitespace-nowrap border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
                        Completed (<span id="completed-count"><%= bids.completed ? bids.completed.length : 0 %></span>)
                    </button>
                </nav>
            </div>
        </div>

        <!-- Submitted Bids -->
        <div id="submitted-tab" class="tab-content">
            <% if (bids.submitted && bids.submitted.length > 0) { %>
                <div class="grid gap-6">
                    <% bids.submitted.forEach(bid => { %>
                    <div class="bg-white shadow rounded-lg p-6 border-l-4 border-blue-500">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex-1">
                                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                                    <%= bid.project && bid.project.title ? bid.project.title : 'Project' %>
                                </h3>
                                <p class="text-gray-600 mb-3 line-clamp-2">
                                    <%= bid.project && bid.project.description ? bid.project.description : 'No description available' %>
                                </p>
                                
                                <div class="grid md:grid-cols-3 gap-4 text-sm text-gray-500 mb-4">
                                    <div class="flex items-center">
                                        <i class="fas fa-tag mr-2 text-indigo-500"></i>
                                        <span class="capitalize">
                                            <%= bid.project && bid.project.category ? bid.project.category.replace('-', ' ') : 'general' %>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                                        <span>
                                            <%= bid.project && bid.project.location ? `${bid.project.location.city}, ${bid.project.location.state}` : 'Location not specified' %>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-clock mr-2 text-orange-500"></i>
                                        <span>
                                            <% if (bid.project && bid.project.bidSettings && bid.project.bidSettings.bidEndDate) { %>
                                                Bid ends: <%= moment(bid.project.bidSettings.bidEndDate).fromNow() %>
                                            <% } else { %>
                                                Bid timeline not set
                                            <% } %>
                                        </span>
                                    </div>
                                </div>

                                <!-- Auto Selection Info -->
                                <div class="bg-blue-50 border border-blue-200 rounded-md p-3 mb-3">
                                    <p class="text-sm text-blue-700">
                                        <i class="fas fa-info-circle mr-1"></i>
                                        <% if (bid.project && bid.project.bidSettings && bid.project.bidSettings.bidEndDate) { %>
                                            Highest bidder automatically wins when bidding ends on 
                                            <%= moment(bid.project.bidSettings.bidEndDate).format('MMM D, YYYY h:mm A') %>
                                        <% } else { %>
                                            Automatic winner selection enabled
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="ml-6 text-right">
                                <p class="text-2xl font-bold text-green-600">$<%= bid.amount || 0 %></p>
                                <p class="text-sm text-gray-500">Your Bid</p>
                                <p class="text-xs text-gray-400 mt-1">
                                    <%= bid.project && bid.project.bids ? bid.project.bids.length : 0 %> total bids
                                </p>
                            </div>
                        </div>
                        
                        <div class="flex justify-between items-center border-t border-gray-100 pt-4">
                            <div class="text-sm text-gray-500">
                                <span>Project Status: </span>
                                <span class="font-medium capitalize">
                                    <%= bid.project && bid.project.status ? bid.project.status.replace('-', ' ') : 'unknown' %>
                                </span>
                            </div>
                            <div class="flex space-x-2">
                                <a href="/seller/bid-details/<%= bid.project ? bid.project._id : '' %>" 
                                   class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300 text-sm">
                                    View Details
                                </a>
                                <% if (bid.project && bid.project.bidSettings && bid.project.bidSettings.isActive && moment().isBefore(bid.project.bidSettings.bidEndDate)) { %>
                                <a href="/seller/bid-details/<%= bid.project._id %>" 
                                   class="bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-700 transition duration-300 text-sm">
                                    Edit Bid
                                </a>
                                <form action="/seller/withdraw-bid/<%= bid._id %>" method="POST" class="inline">
                                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                    <button type="submit" 
                                            onclick="return confirm('Are you sure you want to withdraw this bid?')"
                                            class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition duration-300 text-sm">
                                        Withdraw
                                    </button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="bg-white shadow rounded-lg p-12 text-center">
                    <i class="fas fa-inbox text-gray-300 text-6xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No submitted bids</h3>
                    <p class="text-gray-500 mb-6">You haven't submitted any bids yet.</p>
                    <a href="/seller/find-bids" class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition duration-300">
                        Find Projects to Bid On
                    </a>
                </div>
            <% } %>
        </div>

        <!-- Won Bids -->
        <div id="won-tab" class="tab-content hidden">
            <% if (bids.won && bids.won.length > 0) { %>
                <div class="grid gap-6">
                    <% bids.won.forEach(bid => { %>
                    <div class="bg-white shadow rounded-lg p-6 border-l-4 border-green-500">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex-1">
                                <div class="flex items-center mb-2">
                                    <h3 class="text-xl font-semibold text-gray-900 mr-3">
                                        <%= bid.project && bid.project.title ? bid.project.title : 'Project' %>
                                    </h3>
                                    <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full">WINNER</span>
                                    <!-- NEW: Auto-won indicator -->
                                    <% if (bid.autoWon) { %>
                                    <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded-full ml-2">
                                        <i class="fas fa-robot mr-1"></i>AUTO-WON
                                    </span>
                                    <% } %>
                                </div>
                                <p class="text-gray-600 mb-3">
                                    <%= bid.project && bid.project.description ? bid.project.description : 'No description available' %>
                                </p>
                                
                                <div class="grid md:grid-cols-3 gap-4 text-sm text-gray-500 mb-4">
                                    <div class="flex items-center">
                                        <i class="fas fa-tag mr-2 text-indigo-500"></i>
                                        <span class="capitalize">
                                            <%= bid.project && bid.project.category ? bid.project.category.replace('-', ' ') : 'general' %>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                                        <span>
                                            <%= bid.project && bid.project.location ? `${bid.project.location.city}, ${bid.project.location.state}` : 'Location not specified' %>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-dollar-sign mr-2 text-green-500"></i>
                                        <span class="font-semibold">Winning Bid: $<%= bid.amount || 0 %></span>
                                    </div>
                                </div>

                                <!-- ENHANCED: Contract Process Section -->
                              <!-- In the won bids section, update the contract status display: -->
<% if (bid.contract) { %>
<div class="bg-green-50 border border-green-200 rounded-md p-4 mb-3">
    <h4 class="font-semibold text-green-800 mb-3">Contract Process Status</h4>
    
    <!-- Progress Steps -->
    <div class="flex items-center justify-between mb-4">
        <% 
        const sellerSteps = [
            { number: 1, title: 'Wait Customer', active: bid.contract.customerSignedContract && bid.contract.customerSignedContract.url },
            { number: 2, title: 'Download & Upload', active: bid.contract.sellerSignedContract && bid.contract.sellerSignedContract.url },
            { number: 3, title: 'Admin Review', active: bid.contract.status === 'pending-admin' },
            { number: 4, title: 'Completed', active: bid.contract.status === 'completed' }
        ];
        %>
        
        <% sellerSteps.forEach((step, index) => { %>
        <div class="flex flex-col items-center flex-1">
            <div class="w-8 h-8 rounded-full 
                <%= step.active ? 'bg-green-500' : 'bg-gray-300' %> 
                text-white flex items-center justify-center mb-1 text-sm">
                <%= step.active ? '✓' : step.number %>
            </div>
            <p class="text-xs text-gray-700 text-center"><%= step.title %></p>
        </div>
        <% }); %>
    </div>

    <!-- Action Buttons Based on Status -->
    <div class="space-y-3">
        <% if (!bid.contract.customerSignedContract || !bid.contract.customerSignedContract.url) { %>
        <div class="bg-yellow-50 border border-yellow-200 rounded p-3">
            <p class="text-sm text-yellow-700">
                <i class="fas fa-clock mr-2"></i>
                Waiting for customer to upload their signed contract first.
            </p>
        </div>
        <% } else if (!bid.contract.sellerSignedContract || !bid.contract.sellerSignedContract.url) { %>
        <div class="bg-blue-50 border border-blue-200 rounded p-4">
            <h5 class="font-semibold text-blue-800 mb-2">Your Turn to Upload Contract</h5>
            <p class="text-sm text-blue-700 mb-3">
                Customer has uploaded their contract. Please download the template, sign it, and upload your signed version.
            </p>
            <div class="flex flex-wrap gap-3 mb-3">
                <a href="/seller/download-contract-template/<%= bid._id %>" 
                   class="bg-blue-600 text-white px-4 py-2 rounded text-sm hover:bg-blue-700 inline-flex items-center">
                    <i class="fas fa-download mr-2"></i>Download Template
                </a>
                <a href="/seller/download-customer-contract/<%= bid._id %>" 
                   class="bg-green-600 text-white px-4 py-2 rounded text-sm hover:bg-green-700 inline-flex items-center">
                    <i class="fas fa-eye mr-2"></i>View Customer Contract
                </a>
            </div>
            
            <!-- Upload Form -->
            <form action="/seller/upload-contract" method="POST" enctype="multipart/form-data" class="mt-3">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                <input type="hidden" name="bidId" value="<%= bid._id %>">
                <div class="flex gap-2">
                    <input type="file" name="contract" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" required 
                           class="flex-1 text-sm text-gray-500 file:mr-2 file:py-1 file:px-2 file:rounded file:border-0 file:text-xs file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100">
                    <button type="submit" 
                            class="bg-green-600 text-white px-4 py-2 rounded text-sm hover:bg-green-700">
                        <i class="fas fa-upload mr-1"></i>Upload Signed Contract
                    </button>
                </div>
                <p class="text-xs text-gray-500 mt-1">Supported formats: PDF, Word documents, JPEG, PNG (Max 10MB)</p>
            </form>
        </div>
       <% } else if (bid.contract.status === 'pending-admin') { %>
<div class="bg-purple-50 border border-purple-200 rounded p-3">
    <p class="text-sm text-purple-700 mb-2">
        <i class="fas fa-shield-alt mr-2"></i>
        Both contracts uploaded. Waiting for <strong>manual admin approval</strong>. This process typically takes 1-2 business days.
    </p>
    <div class="flex gap-2">
        <a href="/seller/download-customer-contract/<%= bid._id %>" 
           class="bg-blue-600 text-white px-3 py-1 rounded text-xs hover:bg-blue-700">
            <i class="fas fa-download mr-1"></i>Customer Contract
        </a>
        <a href="<%= bid.contract.sellerSignedContract.url %>" target="_blank"
           class="bg-green-600 text-white px-3 py-1 rounded text-xs hover:bg-green-700">
            <i class="fas fa-download mr-1"></i>Your Contract
        </a>
    </div>
</div>

        <% } else if (bid.contract.status === 'completed') { %>
        <div class="bg-green-50 border border-green-200 rounded p-3">
            <p class="text-sm text-green-700 mb-2">
                <i class="fas fa-check-circle mr-2"></i>
                Contract approved! Download your completion certificate.
            </p>
            <div class="flex gap-2 flex-wrap">
                <a href="/seller/download-final-certificate/<%= bid._id %>" 
                   class="bg-purple-600 text-white px-3 py-1 rounded text-xs hover:bg-purple-700 flex items-center">
                    <i class="fas fa-award mr-1"></i>Certificate
                </a>
                <a href="/seller/download-customer-contract/<%= bid._id %>" 
                   class="bg-blue-600 text-white px-3 py-1 rounded text-xs hover:bg-blue-700 flex items-center">
                    <i class="fas fa-file-contract mr-1"></i>Customer Contract
                </a>
                <a href="<%= bid.contract.sellerSignedContract.url %>" target="_blank"
                   class="bg-green-600 text-white px-3 py-1 rounded text-xs hover:bg-green-700 flex items-center">
                    <i class="fas fa-file-signature mr-1"></i>Your Contract
                </a>
            </div>
        </div>
        <% } %>
    </div>
</div>
<% } else { %>
<div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
    <p class="text-sm text-yellow-700">
        <i class="fas fa-info-circle mr-2"></i>
        Contract is being prepared. You'll be notified when it's ready for your action.
    </p>
</div>
<% } %>
                            </div>
                            
                            <div class="ml-6 text-right">
                                <p class="text-2xl font-bold text-green-600">$<%= bid.amount || 0 %></p>
                                <p class="text-sm text-gray-500">Winning Bid</p>
                                
                                <!-- Quick Download Links -->
                                <% if (bid.contract) { %>
                                    <% if (bid.contract.customerSignedContract && bid.contract.customerSignedContract.url) { %>
                                    <a href="/seller/download-customer-contract/<%= bid._id %>" target="_blank"
                                       class="block mt-2 bg-blue-600 text-white px-3 py-1 rounded text-xs hover:bg-blue-700 transition duration-300">
                                        <i class="fas fa-download mr-1"></i>Customer Contract
                                    </a>
                                    <% } %>
                                    <% if (bid.contract.sellerTemplate && bid.contract.sellerTemplate.url) { %>
                                    <a href="/seller/download-contract-template/<%= bid._id %>" target="_blank"
                                       class="block mt-1 bg-gray-600 text-white px-3 py-1 rounded text-xs hover:bg-gray-700 transition duration-300">
                                        <i class="fas fa-file-download mr-1"></i>Template
                                    </a>
                                    <% } %>
                                    <% if (bid.certificateGenerated && bid.certificateUrl) { %>
                                    <a href="/seller/download-final-certificate/<%= bid._id %>" 
                                       class="block mt-1 bg-purple-600 text-white px-3 py-1 rounded text-xs hover:bg-purple-700 transition duration-300">
                                        <i class="fas fa-award mr-1"></i>Certificate
                                    </a>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="flex justify-between items-center border-t border-gray-100 pt-4">
                            <div class="text-sm text-gray-500">
                                <span>Project Status: </span>
                                <span class="font-medium capitalize">
                                    <%= bid.project && bid.project.status ? bid.project.status.replace('-', ' ') : 'unknown' %>
                                </span>
                            </div>
                            <div class="flex space-x-2">
                                <a href="/seller/bid-details/<%= bid.project ? bid.project._id : '' %>" 
                                   class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300 text-sm">
                                    View Project
                                </a>
                                <% if (bid.contract) { %>
                                <a href="/seller/contract-details/<%= bid._id %>" 
                                   class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-300 text-sm">
                                    Contract Details
                                </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="bg-white shadow rounded-lg p-12 text-center">
                    <i class="fas fa-trophy text-gray-300 text-6xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No won bids yet</h3>
                    <p class="text-gray-500">Keep bidding on projects to increase your chances of winning!</p>
                </div>
            <% } %>
        </div>

        <!-- In Progress Bids -->
        <div id="in-progress-tab" class="tab-content hidden">
            <% if (bids['in-progress'] && bids['in-progress'].length > 0) { %>
                <div class="grid gap-6">
                    <% bids['in-progress'].forEach(bid => { %>
                    <div class="bg-white shadow rounded-lg p-6 border-l-4 border-orange-500">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex-1">
                                <div class="flex items-center mb-2">
                                    <h3 class="text-xl font-semibold text-gray-900 mr-3">
                                        <%= bid.project && bid.project.title ? bid.project.title : 'Project' %>
                                    </h3>
                                    <span class="px-3 py-1 bg-orange-100 text-orange-800 text-sm rounded-full">IN PROGRESS</span>
                                </div>
                                <p class="text-gray-600 mb-3">
                                    <%= bid.project && bid.project.description ? bid.project.description : 'No description available' %>
                                </p>
                                
                                <div class="grid md:grid-cols-3 gap-4 text-sm text-gray-500 mb-4">
                                    <div class="flex items-center">
                                        <i class="fas fa-tag mr-2 text-indigo-500"></i>
                                        <span class="capitalize">
                                            <%= bid.project && bid.project.category ? bid.project.category.replace('-', ' ') : 'general' %>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                                        <span>
                                            <%= bid.project && bid.project.location ? `${bid.project.location.city}, ${bid.project.location.state}` : 'Location not specified' %>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <i class="fas fa-dollar-sign mr-2 text-green-500"></i>
                                        <span class="font-semibold">Contract Value: $<%= bid.amount || 0 %></span>
                                    </div>
                                </div>

                                <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                                    <h4 class="font-semibold text-blue-800 mb-2">Project in Progress</h4>
                                    <p class="text-sm text-blue-700">This project is currently being executed. Keep up the good work!</p>
                                    <div class="mt-2 text-sm text-blue-600">
                                        <i class="fas fa-calendar mr-2"></i>
                                        <span>
                                            Timeline: 
                                            <%= bid.timeline && bid.timeline.duration ? bid.timeline.duration : 
                                               (bid.project && bid.project.timeline && bid.project.timeline.duration ? 
                                               bid.project.timeline.duration : 'Not specified') %> 
                                            days
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="ml-6 text-right">
                                <p class="text-2xl font-bold text-green-600">$<%= bid.amount || 0 %></p>
                                <p class="text-sm text-gray-500">Contract Value</p>
                            </div>
                        </div>
                        
                        <div class="flex justify-between items-center border-t border-gray-100 pt-4">
                            <div class="text-sm text-gray-500">
                                <span>Progress: </span>
                                <span class="font-medium">
                                    <%= bid.project && bid.project.progress ? bid.project.progress : 0 %>% Complete
                                </span>
                            </div>
                            <div class="flex space-x-2">
                                <a href="/seller/bid-details/<%= bid.project ? bid.project._id : '' %>" 
                                   class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300 text-sm">
                                    View Project
                                </a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="bg-white shadow rounded-lg p-12 text-center">
                    <i class="fas fa-tasks text-gray-300 text-6xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No bids in progress</h3>
                    <p class="text-gray-500">Bids will appear here once they move to in-progress status.</p>
                </div>
            <% } %>
        </div>

        <!-- Lost Bids -->
        <div id="lost-tab" class="tab-content hidden">
            <% if (bids.lost && bids.lost.length > 0) { %>
                <div class="grid gap-6">
                    <% bids.lost.forEach(bid => { %>
                    <div class="bg-white shadow rounded-lg p-6 border-l-4 border-red-500 opacity-75">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex-1">
                                <div class="flex items-center mb-2">
