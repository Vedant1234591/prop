<section
  id="offices"
  class="bg-white rounded-2xl shadow border border-transparent hover:border-[var(--propload-secondary)] hover:shadow-lg transition-all duration-300 p-8 font-[Poppins]"
>
  <div class="flex justify-between items-center mb-8 border-b border-gray-200 pb-4">
    <div>
      <h2 class="text-2xl font-bold text-secondary flex items-center gap-2">
        <i class="fas fa-city text-primary"></i>
        Office Locations
      </h2>
      <p class="text-gray-500 text-sm mt-2 font-medium">
        Manage your registered business office locations and details.
      </p>
    </div>
    <a
      href="/seller/add-office"
      class="bg-secondary text-white px-5 py-2.5 rounded-md font-medium text-sm shadow-sm hover:opacity-90 transition duration-300"
    >
      Add Office
    </a>
  </div>

  <% if (seller?.officeLocations?.length) { %>
    <div class="space-y-6">
      <% seller.officeLocations.forEach((loc, index) => { %>
        <div
          class="border border-gray-200 rounded-xl p-5 bg-gray-50 hover:border-[var(--propload-secondary)] hover:bg-[var(--propload-primary)]/20 transition duration-300 shadow-sm"
        >
          <div class="flex justify-between items-center mb-2">
            <h3 class="text-lg font-semibold text-secondary">
              <%= loc.officeName || ('Office ' + (index + 1)) %>
            </h3>

            <% if (loc.primary) { %>
              <span class="bg-secondary text-white text-xs px-3 py-1 rounded-full font-medium shadow-sm">
                Primary
              </span>
            <% } %>
          </div>

          <p class="text-sm text-gray-800 mt-1 leading-relaxed">
            <%= loc.address?.fullAddress || '-' %>
          </p>

          <p class="text-xs text-gray-600 mt-1">
            <%= loc.address?.city %>, <%= loc.address?.district %>, 
            <%= loc.address?.state %> - <%= loc.address?.pinCode %>
          </p>

          <p class="text-xs text-gray-600 mt-1">
            <span class="font-medium text-secondary">GSTIN:</span>
            <%= loc.gstin || 'â€”' %>
          </p>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-gray-500 text-sm mt-2">No office locations added yet.</p>
  <% } %>
</section>
