<section id="offices" class="bg-white rounded-2xl shadow p-6">
  <h2 class="text-xl font-semibold text-[rgb(49,94,113)] mb-4">
    üèôÔ∏è Office Locations
  </h2>

  <% if (seller?.officeLocations?.length) { %>
  <div class="space-y-4">
    <% seller.officeLocations.forEach((loc, index) => { %>
    <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
      <div class="flex justify-between">
        <h3 class="font-medium text-[rgb(49,94,113)]">
          <%= loc.officeName || 'Office ' + (index+1) %>
        </h3>
        <% if (loc.primary) { %>
        <span class="bg-[rgb(49,94,113)] text-white text-xs px-2 py-1 rounded"
          >Primary</span
        >
        <% } %>
      </div>
      <p class="text-sm text-gray-600 mt-1">
        <%= loc.address?.fullAddress || '-' %>
      </p>
      <p class="text-xs text-gray-500 mt-1">
        <%= loc.address?.city %>, <%= loc.address?.district %>, <%=
        loc.address?.state %> - <%= loc.address?.pinCode %>
      </p>
      <p class="text-xs text-gray-500 mt-1">GSTIN: <%= loc.gstin || '‚Äî' %></p>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <p class="text-gray-500 text-sm">No office locations added yet.</p>
  <% } %>
</section>
