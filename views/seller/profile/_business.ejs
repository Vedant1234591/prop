<link
  href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
  rel="stylesheet"
/>

<section
  id="business"
  class="bg-white rounded-2xl shadow border border-transparent hover:border-[var(--propload-secondary)] hover:shadow-lg transition-all duration-300 p-8 font-[Poppins]"
>
  <div class="flex justify-between items-center mb-8 border-b border-gray-200 pb-4">
    <div>
      <h2 class="text-2xl font-bold text-secondary tracking-tight flex items-center gap-2">
        <i class="fas fa-briefcase text-primary"></i>
        Business Details
      </h2>
      <p class="text-gray-500 text-sm mt-2 font-medium">
        Your verified business identity and registration information.
      </p>
    </div>

    <a
      href="/seller/edit-business"
      class="bg-secondary text-white px-5 py-2.5 rounded-md font-medium text-sm shadow-sm hover:opacity-90 transition duration-300"
    >
      Edit
    </a>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-10 gap-y-6 text-[15px] text-gray-800">
    <div>
      <p class="text-secondary text-sm font-semibold mb-1">Business Name</p>
      <p class="font-medium"><%= seller?.BusinessName || "—" %></p>
    </div>

    <div>
      <p class="text-secondary text-sm font-semibold mb-1">Business Type</p>
      <p class="font-medium"><%= seller?.BusinessType || "—" %></p>
    </div>

    <div>
      <p class="text-secondary text-sm font-semibold mb-1">Verification Status</p>
      <% if (seller?.adminVerified) { %>
        <p class="font-semibold text-green-700">Verified</p>
      <% } else { %>
        <p class="font-semibold text-yellow-700">Pending Review</p>
      <% } %>
    </div>
  </div>

  <% if (seller?.BusinessDetails?.length) { %>
    <div class="mt-8 pt-4 border-t border-gray-200">
      <p class="text-secondary text-sm font-semibold mb-3">
        Additional Business Details
      </p>
      <div
        class="bg-[var(--propload-primary)] border border-[var(--propload-secondary)] rounded-xl p-5 text-[15px] leading-relaxed text-[var(--propload-secondary)] font-medium shadow-sm"
      >
        <% seller.BusinessDetails.forEach(detail => { %>
          <p class="mb-1">• <%= detail %></p>
        <% }) %>
      </div>
    </div>
  <% } %>
</section>
