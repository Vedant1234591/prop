<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/landing/Vector.jpeg">
  <title>Seller Dashboard - Propload</title>

  <!-- Tailwind & Icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

  <style>
    :root {
      --propload-primary: #e9e2b3;
      --propload-secondary: #2f6c7b;
      --surface: #ffffff;
      --muted: #6b7280;
      --card-shadow: 0 8px 20px rgba(47, 76, 86, 0.06);
    }

    body {
      background: #f9fafb;
    }

    .content-area {
      margin-left: 280px;
      transition: margin-left .25s ease;
    }

    @media (max-width: 1024px) {
      .content-area {
        margin-left: 0;
      }
    }

    .card {
      background: var(--surface);
      border-radius: 10px;
      box-shadow: var(--card-shadow);
      border: 1px solid rgba(15, 23, 42, 0.03);
      transition: transform .15s ease, box-shadow .15s ease;
    }

    .card:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 24px rgba(47, 76, 86, 0.08);
    }

    .muted { color: var(--muted); }
  </style>
</head>

<body class="text-slate-800 antialiased">

  
  <%- include('./sideNav') %>

  <main class="content-area min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

      <!-- Header -->
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4 mb-6">
        <%- include('../partials/flash-messages') %>
        <div>
          <h1 class="text-3xl font-bold" style="color: var(--muted);">Seller Dashboard</h1>
          <p class="text-sm text-slate-500 mt-1">
            Welcome back, <span class="font-semibold text-slate-700"><%= user.name %></span>! Here's your bidding overview.
          </p>
        </div>
        <a href="/seller/find-bids"
           class="inline-flex items-center gap-2 px-4 py-2 rounded-md text-white text-md font-semibold shadow"
           style="background-color: var(--propload-secondary);">
           <i class="fas fa-search"></i> Find Bids
        </a>
      </div>

      <!-- Real-time status header -->
      <div class="card p-4 mb-6">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
          <div class="flex items-center gap-3">
            <div class="rounded-md p-2" style="background: rgba(47,108,123,0.08)">
              <i class="fas fa-sync-alt" style="color: var(--propload-secondary)"></i>
            </div>
            <div>
              <p class="text-sm text-slate-600">
                Real-time updates active — automatic winner selection enabled.
              </p>
              <p class="text-xs muted">Stay synced with latest bid results.</p>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <a href="/seller/update-statuses"
               class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-[var(--propload-secondary)] text-white text-sm">
               <i class="fas fa-sync-alt"></i> Update Now
            </a>
            <span class="text-xs muted" id="last-updated">Updated just now</span>
          </div>
        </div>
      </div>

      <!-- Pending contracts -->
      <% if (pendingContracts && pendingContracts.length > 0) { %>
      <div class="card p-4 mb-6" style="background: linear-gradient(90deg, rgba(233,226,179,0.18), rgba(47,108,123,0.02))">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
          <div class="flex items-center gap-3">
            <div class="rounded-md p-2" style="background: rgba(47,108,123,0.06)">
              <i class="fas fa-file-contract" style="color:var(--propload-secondary)"></i>
            </div>
            <div>
              <p class="text-sm text-slate-700">
                You have <strong><%= pendingContracts.length %></strong> pending contract(s) awaiting your signature.
              </p>
              <p class="text-xs muted">Please review and approve soon.</p>
            </div>
          </div>
          <a href="/seller/my-bids"












             class="inline-flex items-center gap-2 px-3 py-1.5 rounded-md bg-[var(--propload-secondary)] text-white text-sm">
             <i class="fas fa-eye"></i> View Contracts
          </a>
        </div>
      </div>
      <% } %>

      <!-- Stats grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <% const statColors = ['#2f6c7b','#16a34a','#b45309','#6d28d9']; %>
        <% const statIcons = ['fa-paper-plane','fa-trophy','fa-chart-line','fa-percentage']; %>
        <% const statTitles = ['Submitted Bids','Won Bids','In Progress','Success Rate']; %>
        <% const statData = [
          stats.submitted.count || 0,
          stats.won.count || 0,
          stats['in-progress'].count || 0,
          (totalStats.successRate || 0) + '%'
        ]; %>
        <% for (let i=0; i<statTitles.length; i++) { %>
          <div class="card p-5 border-l-4" style="border-color:<%= statColors[i] %>;">
            <div class="flex items-center">
              <div class="p-3 rounded-lg" style="background: rgba(47,108,123,0.06)">
                <i class="fas <%= statIcons[i] %>" style="color:<%= statColors[i] %>"></i>
              </div>
              <div class="ml-4">
                <h3 class="text-sm font-medium muted"><%= statTitles[i] %></h3>
                <p class="text-2xl font-bold text-slate-800"><%= statData[i] %></p>
              </div>
            </div>
          </div>
        <% } %>
      </div>




      <!-- Additional summary stats: Total Amount, Lost, Completed -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
  <% const summaryColors = ['#16a34a','#ef4444','#3b82f6']; %>
  <% const summaryIcons = ['fa-dollar-sign','fa-times-circle','fa-check-circle','fa-bell']; %>
  <% const summaryTitles = ['Total Bid Amount','Lost Bids','Completed Bids','Latest Notice']; %>
  <% const summaryData = [
    '$' + (totalStats.totalAmount || 0).toLocaleString(),
    stats.lost.count || 0,
    stats.completed.count || 0,
    
  ]; %>
  <% for (let i=0; i<summaryTitles.length; i++) { %>
    <div class="card p-5 border-l-4" style="border-color:<%= summaryColors[i] %>;">
      <div class="flex items-center">
        <div class="p-3 rounded-lg" style="background: rgba(47,108,123,0.06)">
          <i class="fas <%= summaryIcons[i] %>" style="color:<%= summaryColors[i] %>"></i>
        </div>
        <div class="ml-4 min-w-0">
          <h3 class="text-sm font-medium muted truncate"><%= summaryTitles[i] %></h3>
          <p class="text-xl sm:text-2xl font-bold text-slate-800 truncate"><%= summaryData[i] %></p>
        </div>
      </div>
    </div>
  <% } %>
</div>




      <!-- Quick actions + Bids + Projects -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Latest Bids -->
        <div class="lg:col-span-1 card">
          <div class="px-5 py-4 border-b border-gray-100 flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
              <i class="fas fa-paper-plane" style="color:var(--propload-secondary)"></i> Latest Bids
            </h3>
            <span class="text-xs muted">Updated just now</span>
          </div>
          <div class="p-5 space-y-3">
            <% if (latestBids && latestBids.length > 0) { %>
              <% latestBids.forEach(bid => { %>
                <div class="border border-gray-100 rounded-lg p-3 hover:bg-gray-50 transition">
                  <div class="flex justify-between items-start mb-1">
                    <h4 class="font-semibold text-slate-800 text-sm truncate">
                      <%= bid.project?.title || 'Project' %>
                    </h4>
                    <span class="text-xs px-2 py-1 rounded-full font-semibold
                      <%= bid.status === 'won' ? 'bg-green-100 text-green-800' :
                          bid.status === 'lost' ? 'bg-red-100 text-red-800' :
                          bid.status === 'in-progress' ? 'bg-yellow-100 text-yellow-800' :
                          'bg-blue-100 text-blue-800' %>">
                      <%= bid.status.toUpperCase() %>
                    </span>
                  </div>
                  <p class="text-xs muted">$<%= bid.amount %> • <%= bid.project?.category || 'General' %></p>
                  <p class="text-xs text-gray-500"><%= moment(bid.createdAt).fromNow() %></p>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-sm text-center muted py-3">No bids submitted yet.</p>
            <% } %>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="lg:col-span-1 card">
          <div class="px-5 py-4 border-b border-gray-100">
            <h3 class="text-lg font-semibold text-slate-800">Quick Actions</h3>
          </div>
          <div class="p-5 grid grid-cols-2 gap-4">
            <a href="/seller/find-bids" class="bg-indigo-50 text-indigo-700 p-4 rounded-lg text-center hover:bg-indigo-100 transition">
              <i class="fas fa-search text-lg mb-2 block"></i><span class="text-sm font-medium">Find Bids</span>
            </a>
            <a href="/seller/my-bids" class="bg-green-50 text-green-700 p-4 rounded-lg text-center hover:bg-green-100 transition">
              <i class="fas fa-list text-lg mb-2 block"></i><span class="text-sm font-medium">My Bids</span>
            </a>
            <a href="/seller/profile" class="bg-blue-50 text-blue-700 p-4 rounded-lg text-center hover:bg-blue-100 transition">
              <i class="fas fa-user text-lg mb-2 block"></i><span class="text-sm font-medium">Profile</span>
            </a>
            <a href="/seller/notices" class="bg-yellow-50 text-yellow-700 p-4 rounded-lg text-center hover:bg-yellow-100 transition">
              <i class="fas fa-bell text-lg mb-2 block"></i><span class="text-sm font-medium">Notices</span>
            </a>
          </div>
        </div>

       <!-- Latest Notices -->
<div class="lg:col-span-1 card">
  <div class="px-5 py-4 border-b border-gray-100 flex items-center justify-between">
    <h3 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
      <i class="fas fa-bell" style="color: var(--propload-secondary)"></i> Latest Notices
    </h3>
    <a href="/seller/notices" class="text-sm text-[var(--propload-secondary)] hover:underline">View All</a>
  </div>
  <div class="p-5 space-y-3 max-h-72 overflow-y-auto">
    <% if (latestNotices && latestNotices.length > 0) { %>
      <% latestNotices.forEach(notice => { %>
        <div class="border border-gray-100 rounded-lg p-3 hover:bg-gray-50 transition cursor-pointer"
             onclick="window.location.href='/seller/notices'">
          <h4 class="font-semibold text-slate-800 text-sm mb-1 truncate"><%= notice.title %></h4>
          <p class="text-xs muted truncate"><%= notice.description %></p>
          <p class="text-xs text-gray-500"><%= moment(notice.createdAt).fromNow() %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-sm muted text-center py-3">No new notices.</p>
    <% } %>
  </div>
</div>

      </div>
    </div>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</body>
</html>
