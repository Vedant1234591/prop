<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Feedbacks - Propload</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .btn-primary-custom {
            background-color: #40788e;
            color: white;
            border: none;
        }
        .btn-primary-custom:hover {
            background-color: #2f5e6b;
            color: white;
        }
        .feedback-card {
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
        }
        .feedback-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(47, 108, 123, 0.15);
        }
        .rating-stars {
            color: #ffc107;
        }
        .user-avatar {
            width: 50px;
            height: 50px;
            background-color: #40788e;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            font-weight: bold;
        }
    </style>
</head>
<body>


    <div class="container py-5 mt-5">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold mb-3" style="color: #2f6c7b;">What Our Users Say</h1>
            <p class="lead text-muted">Read feedback from our valued customers and professionals</p>
            <a href="/feedback" class="btn btn-primary-custom mt-3">
                <i class="fas fa-pencil-alt me-2"></i>Share Your Feedback
            </a>
        </div>

        <!-- Feedback Statistics -->
        <div class="row mb-5">
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-primary"><%= feedbacks.length %></h3>
                        <p class="text-muted mb-0">Total Feedbacks</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-warning">
                            <% 
                                const avgRating = feedbacks.length > 0 ? 
                                (feedbacks.reduce((sum, f) => sum + f.rating, 0) / feedbacks.length).toFixed(1) : 0; 
                            %>
                            <%= avgRating %>
                        </h3>
                        <p class="text-muted mb-0">Average Rating</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-success">
                            <%= feedbacks.filter(f => f.rating >= 4).length %>
                        </h3>
                        <p class="text-muted mb-0">Positive Feedbacks</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="text-info">
                            <%= new Set(feedbacks.map(f => f.userType)).size %>
                        </h3>
                        <p class="text-muted mb-0">User Types</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feedback Grid -->
        <div class="row g-4">
            <% if (feedbacks && feedbacks.length > 0) { %>
                <% feedbacks.forEach(feedback => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 feedback-card border-0 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <!-- Rating -->
                            <div class="rating-stars mb-3" style="font-size: 1.1rem;">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <i class="fas fa-star<%= i <= feedback.rating ? '' : '-half-alt' %>"></i>
                                <% } %>
                                <small class="text-muted ms-2">(<%= feedback.rating %>/5)</small>
                            </div>

                            <!-- Message -->
                            <div class="mb-4 flex-grow-1">
                                <p class="text-muted fst-italic">
                                    "<%= feedback.message.length > 120 ? feedback.message.substring(0, 120) + '...' : feedback.message %>"
                                </p>
                            </div>

                            <!-- Subject -->
                            <div class="mb-3">
                                <h6 class="fw-semibold" style="color: #2f6c7b;">
                                    <%= feedback.subject %>
                                </h6>
                            </div>

                            <!-- User Info -->
                            <div class="d-flex align-items-center mt-auto">
                                <div class="user-avatar me-3">
                                    <%= feedback.name.charAt(0).toUpperCase() %>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-semibold"><%= feedback.name %></h6>
                                    <div class="d-flex flex-wrap gap-1">
                                        <span class="badge bg-secondary text-capitalize">
                                            <%= feedback.userType %>
                                        </span>
                                        <span class="badge bg-light text-dark text-capitalize">
                                            <%= feedback.category %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Date -->
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    <%= feedback.formattedDate %>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <div class="text-muted">
                        <i class="fas fa-comments fa-4x mb-4" style="color: #e9e2b3;"></i>
                        <h3 class="mb-3">No Feedback Yet</h3>
                        <p class="mb-4 lead">Be the first to share your experience with Propload!</p>
                        <a href="/feedback" class="btn btn-primary-custom btn-lg">
                            <i class="fas fa-pencil-alt me-2"></i>Share Your Feedback
                        </a>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-5">
            <a href="/" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Home
            </a>
        </div>
    </div>

    <%- include('./partials/landingFooter') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>