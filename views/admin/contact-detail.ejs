<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Submission - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>


    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3">Contact Submission Details</h1>
                    <a href="/admin/contact-submissions" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>


                <div class="row">
                    <!-- Submission Details -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Contact Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <strong>Name:</strong> <%= submission.name %>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Email:</strong> 
                                        <a href="mailto:<%= submission.email %>"><%= submission.email %></a>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <strong>Phone:</strong> 
                                        <%= submission.phone || 'Not provided' %>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Submitted:</strong> 
                                        <%= submission.createdAt.toLocaleString() %>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <strong>Subject:</strong>
                                    <p class="mt-1"><%= submission.subject %></p>
                                </div>
                                <div class="mb-3">
                                    <strong>Message:</strong>
                                    <div class="mt-2 p-3 bg-light rounded">
                                        <%= submission.message.replace(/\n/g, '<br>') %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Admin Actions -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Admin Actions</h5>
                            </div>
                            <div class="card-body">
                                <form action="/admin/contact-submissions/<%= submission._id %>/update" method="POST">
                                    <div class="mb-3">
                                        <label class="form-label">Status</label>
                                        <select name="status" class="form-select">
                                            <option value="new" <%= submission.status === 'new' ? 'selected' : '' %>>New</option>
                                            <option value="in_progress" <%= submission.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                                            <option value="resolved" <%= submission.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                            <option value="closed" <%= submission.status === 'closed' ? 'selected' : '' %>>Closed</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Responded</label>
                                        <select name="responded" class="form-select">
                                            <option value="false" <%= !submission.responded ? 'selected' : '' %>>No</option>
                                            <option value="true" <%= submission.responded ? 'selected' : '' %>>Yes</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Admin Notes</label>
                                        <textarea name="adminNotes" class="form-control" rows="4" 
                                                  placeholder="Add internal notes here..."><%= submission.adminNotes || '' %></textarea>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">Update Submission</button>
                                        <button type="button" class="btn btn-outline-danger" 
                                                onclick="confirmDelete('<%= submission._id %>')">
                                            Delete Submission
                                        </button>
                                    </div>
                                </form>

                                <!-- Hidden delete form -->
                                <form id="deleteForm" action="/admin/contact-submissions/<%= submission._id %>/delete" method="POST" style="display: none;"></form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this contact submission? This action cannot be undone.')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>