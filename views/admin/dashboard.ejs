<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/header1') %>
    
    <div class="max-w-7xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages1') %>
        
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-gray-600 mt-2">Overview of system statistics and activities</p>
        </div>

        <!-- Statistics Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                        <i class="fas fa-users text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Users</p>
                        <p class="text-2xl font-bold text-gray-900"><%= stats.totalUsers %></p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-green-100 text-green-600">
                        <i class="fas fa-project-diagram text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Projects</p>
                        <p class="text-2xl font-bold text-gray-900"><%= stats.totalProjects %></p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                        <i class="fas fa-gavel text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Total Bids</p>
                        <p class="text-2xl font-bold text-gray-900"><%= stats.totalBids %></p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                        <i class="fas fa-file-contract text-xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-600">Pending Contracts</p>
                        <p class="text-2xl font-bold text-gray-900"><%= stats.pendingContracts %></p>
                    </div>
                </div>
            </div>
        </div>
<!-- Pending Projects for Verification -->
<div class="bg-white shadow rounded-lg mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Projects Pending Verification</h2>
        <p class="text-sm text-gray-600 mt-1">Projects waiting for admin approval</p>
    </div>
    <div class="p-6">
        <% 
        const pendingProjects = recentProjects.filter(project => project.adminStatus === 'pending');
        if (pendingProjects.length > 0) { %>
            <div class="space-y-4">
                <% pendingProjects.forEach(project => { %>
                <div class="flex items-center justify-between p-4 border border-yellow-200 rounded-lg bg-yellow-50">
                    <div class="flex-1">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="font-medium text-gray-900"><%= project.title %></h3>
                            <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full">
                                Pending Verification
                            </span>
                        </div>
                        <p class="text-sm text-gray-600">
                            by <%= project.customer.name %> • 
                            Category: <span class="capitalize"><%= project.category %></span> • 
                            Created: <%= moment(project.createdAt).format('MMM D, YYYY') %>
                        </p>
                        <p class="text-sm text-gray-500 mt-1">
                            Starting Bid: $<%= project.bidSettings.startingBid %> • 
                            Timeline: <%= project.timeline.duration %> days
                        </p>
                    </div>
                    <div class="ml-4 flex space-x-2">
                        <a href="/admin/project-verification/<%= project._id %>" 
                           class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-300 text-sm">
                            Review
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-8">
                <i class="fas fa-check-circle text-green-400 text-4xl mb-3"></i>
                <p class="text-gray-500">No projects pending verification</p>
                <p class="text-sm text-gray-400 mt-1">All projects have been reviewed</p>
            </div>
        <% } %>
    </div>
</div>
        <div class="grid lg:grid-cols-2 gap-8">
            <!-- Recent Projects -->
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Recent Projects</h2>
                </div>
                <div class="p-6">
                    <% if (recentProjects.length > 0) { %>
                        <div class="space-y-4">
                            <% recentProjects.forEach(project => { %>
                            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
                                <div>
                                    <h3 class="font-medium text-gray-900"><%= project.title %></h3>
                                    <p class="text-sm text-gray-500">
                                        by <%= project.customer.name %> • 
                                        <span class="capitalize"><%= project.status %></span>
                                    </p>
                                </div>
                                <a href="/admin/projects/<%= project._id %>" class="text-indigo-600 hover:text-indigo-900">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-500 text-center py-4">No projects found</p>
                    <% } %>
                </div>
            </div>

            <!-- Pending Verifications -->
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h2 class="text-lg font-semibold text-gray-900">Pending Contract Verifications</h2>
                </div>
                <div class="p-6">
                    <% if (pendingVerifications.length > 0) { %>
                        <div class="space-y-4">
                            <% pendingVerifications.forEach(contract => { %>
                            <div class="p-3 border border-yellow-200 rounded-lg bg-yellow-50">
                                <h3 class="font-medium text-gray-900"><%= contract.project.title %></h3>
                                <p class="text-sm text-gray-600">
                                    Seller: <%= contract.seller.companyName || contract.seller.name %> • 
                                    Amount: $<%= contract.bid.amount.toLocaleString() %>
                                </p>
                                <div class="mt-2 flex space-x-2">
                                    <a href="/admin/pending-contracts" class="text-sm bg-indigo-600 text-white px-3 py-1 rounded hover:bg-indigo-700">
                                        Review
                                    </a>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-500 text-center py-4">No pending verifications</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mt-8 bg-white shadow rounded-lg p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <a href="/admin/all-users" class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-center hover:bg-blue-100">
                    <i class="fas fa-users text-blue-600 text-xl mb-2"></i>
                    <p class="font-medium text-blue-900">Manage Users</p>
                </a>
                <a href="/admin/all-projects" class="bg-green-50 border border-green-200 rounded-lg p-4 text-center hover:bg-green-100">
                    <i class="fas fa-project-diagram text-green-600 text-xl mb-2"></i>
                    <p class="font-medium text-green-900">View Projects</p>
                </a>
                <a href="/admin/pending-contracts" class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 text-center hover:bg-yellow-100">
                    <i class="fas fa-file-contract text-yellow-600 text-xl mb-2"></i>
                    <p class="font-medium text-yellow-900">Verify Contracts</p>
                </a>
                <a href="/admin/system-status" class="bg-purple-50 border border-purple-200 rounded-lg p-4 text-center hover:bg-purple-100">
                    <i class="fas fa-cog text-purple-600 text-xl mb-2"></i>
                    <p class="font-medium text-purple-900">System Status</p>
                </a>
            </div>
        </div>
    </div>
</body>
</html>