<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Details - Admin - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>
<body class="bg-gray-50">
    <%- include('../partials/header1') %>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages') %>

        <!-- Header -->
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Contract Details</h1>
                <p class="text-gray-600">Complete contract information and document management</p>
            </div>
            <a href="/admin/pending-contracts" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 flex items-center">
                <i class="fas fa-arrow-left mr-2"></i>Back to Pending Contracts
            </a>
        </div>

        <!-- Status Badge -->
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-xl font-semibold text-gray-900"><%= contract.project.title %></h2>
                    <p class="text-gray-600 capitalize"><%= contract.project.category.replace('-', ' ') %></p>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="px-3 py-1 rounded-full text-sm font-medium 
                        <%= contract.status === 'pending-admin' ? 'bg-yellow-100 text-yellow-800' : '' %>
                        <%= contract.status === 'completed' ? 'bg-green-100 text-green-800' : '' %>
                        <%= contract.status === 'rejected' ? 'bg-red-100 text-red-800' : '' %>
                        <%= contract.status === 'correcting' ? 'bg-orange-100 text-orange-800' : '' %>
                        <%= contract.status === 'pending-customer' ? 'bg-blue-100 text-blue-800' : '' %>
                        <%= contract.status === 'pending-seller' ? 'bg-purple-100 text-purple-800' : '' %>">
                        <%= contract.status.toUpperCase().replace('-', ' ') %>
                    </span>
                    <% if (contract.project.biddingRounds?.currentRound === 3) { %>
                    <span class="px-2 py-1 bg-purple-100 text-purple-800 text-xs rounded-full">
                        <i class="fas fa-trophy mr-1"></i>ROUND 3 WINNER
                    </span>
                    <% } %>
                </div>
            </div>

            <!-- Current Rejection Warning -->
            <% if (contract.status === 'correcting' && contract.currentRejection) { %>
            <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
                <div class="flex items-start">
                    <i class="fas fa-exclamation-triangle text-red-500 mt-1 mr-3"></i>
                    <div class="flex-1">
                        <h4 class="font-semibold text-red-800 mb-2">Correction Required</h4>
                        <p class="text-red-700 mb-2"><%= contract.currentRejection.reason %></p>
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="font-medium text-red-800">Party Required:</span>
                                <span class="ml-2 capitalize text-red-700"><%= contract.currentRejection.partyRequired %></span>
                            </div>
                            <div>
                                <span class="font-medium text-red-800">Deadline:</span>
                                <span class="ml-2 text-red-700">
                                    <%= moment(contract.currentRejection.deadline).format('MMM D, YYYY h:mm A') %>
                                    (<%= contract.getRemainingCorrectionTime ? contract.getRemainingCorrectionTime() : 'Calculating...' %>)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>

        <!-- Bidding Round Information -->
        <% if (contract.project.biddingRounds) { %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <h3 class="text-lg font-semibold text-blue-900 mb-3">Bidding Process Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                <div>
                    <span class="font-medium text-blue-800">Current Round:</span>
                    <span class="ml-2">Round <%= contract.project.biddingRounds.currentRound %></span>
                </div>
                <div>
                    <span class="font-medium text-blue-800">Round 1 Status:</span>
                    <span class="ml-2 capitalize"><%= contract.project.biddingRounds.round1.status %></span>
                </div>
                <div>
                    <span class="font-medium text-blue-800">Round 2 Status:</span>
                    <span class="ml-2 capitalize"><%= contract.project.biddingRounds.round2.status %></span>
                </div>
            </div>
        </div>
        <% } %>

        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Left Column - Contract Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Document Status -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Document Status</h3>
                    
                    <div class="grid md:grid-cols-2 gap-4 mb-6">
                        <!-- Customer Contract -->
                        <div class="border rounded-lg p-4 <%= contract.customerSignedContract ? 'border-green-200 bg-green-50' : 'border-red-200 bg-red-50' %>">
                            <div class="flex justify-between items-start mb-3">
                                <h4 class="font-semibold <%= contract.customerSignedContract ? 'text-green-800' : 'text-red-800' %>">
                                    Customer Contract
                                </h4>
                                <span class="px-2 py-1 text-xs rounded-full <%= contract.customerSignedContract ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
                                    <%= contract.customerSignedContract ? 'UPLOADED' : 'PENDING' %>
                                </span>
                            </div>
                            
                            <% if (contract.customerSignedContract) { %>
                            <div class="space-y-2">
                                <p class="text-sm text-gray-600">
                                    <strong>Uploaded:</strong> <%= moment(contract.customerSignedContract.uploadedAt).format('MMM D, YYYY h:mm A') %>
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>File:</strong> <%= contract.customerSignedContract.originalName || contract.customerSignedContract.filename %>
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>Size:</strong> <%= (contract.customerSignedContract.bytes / 1024 / 1024).toFixed(2) %> MB
                                </p>
                                <div class="flex space-x-2 mt-3">
                                    <a href="/admin/contracts/<%= contract._id %>/download-customer" 
                                       target="_blank"
                                       class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 flex items-center">
                                        <i class="fas fa-eye mr-1"></i>View Signed
                                    </a>
                                    <% if (contract.customerTemplate) { %>
                                    <a href="/admin/contracts/<%= contract._id %>/download-template/customer" 
                                       target="_blank"
                                       class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700 flex items-center">
                                        <i class="fas fa-file-download mr-1"></i>Template
                                    </a>
                                    <% } %>
                                </div>
                            </div>
                            <% } else { %>
                            <p class="text-sm text-red-700">Waiting for customer to upload signed contract</p>
                            <% } %>
                        </div>

                        <!-- Seller Contract -->
                        <div class="border rounded-lg p-4 <%= contract.sellerSignedContract ? 'border-green-200 bg-green-50' : 'border-red-200 bg-red-50' %>">
                            <div class="flex justify-between items-start mb-3">
                                <h4 class="font-semibold <%= contract.sellerSignedContract ? 'text-green-800' : 'text-red-800' %>">
                                    Seller Contract
                                </h4>
                                <span class="px-2 py-1 text-xs rounded-full <%= contract.sellerSignedContract ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
                                    <%= contract.sellerSignedContract ? 'UPLOADED' : 'PENDING' %>
                                </span>
                            </div>
                            
                            <% if (contract.sellerSignedContract) { %>
                            <div class="space-y-2">
                                <p class="text-sm text-gray-600">
                                    <strong>Uploaded:</strong> <%= moment(contract.sellerSignedContract.uploadedAt).format('MMM D, YYYY h:mm A') %>
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>File:</strong> <%= contract.sellerSignedContract.originalName || contract.sellerSignedContract.filename %>
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>Size:</strong> <%= (contract.sellerSignedContract.bytes / 1024 / 1024).toFixed(2) %> MB
                                </p>
                                <div class="flex space-x-2 mt-3">
                                    <a href="/admin/contracts/<%= contract._id %>/download-seller" 
                                       target="_blank"
                                       class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 flex items-center">
                                        <i class="fas fa-eye mr-1"></i>View Signed
                                    </a>
                                    <% if (contract.sellerTemplate) { %>
                                    <a href="/admin/contracts/<%= contract._id %>/download-template/seller" 
                                       target="_blank"
                                       class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700 flex items-center">
                                        <i class="fas fa-file-download mr-1"></i>Template
                                    </a>
                                    <% } %>
                                </div>
                            </div>
                            <% } else { %>
                            <p class="text-sm text-red-700">Waiting for seller to upload signed contract</p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Ready for Approval Indicator -->
                    <% if (contract.customerSignedContract && contract.sellerSignedContract) { %>
                    <div class="mt-3 p-3 bg-green-50 border border-green-200 rounded">
                        <div class="flex items-center">
                            <i class="fas fa-check-circle text-green-600 mr-2"></i>
                            <span class="text-green-800 font-medium">Ready for Approval</span>
                            <span class="text-green-700 text-sm ml-2">Both parties have uploaded signed contracts</span>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded">
                        <div class="flex items-center">
                            <i class="fas fa-clock text-yellow-600 mr-2"></i>
                            <span class="text-yellow-800 font-medium">Waiting for Documents</span>
                            <span class="text-yellow-700 text-sm ml-2">
                                <% if (!contract.customerSignedContract && !contract.sellerSignedContract) { %>
                                Customer and seller need to upload contracts
                                <% } else if (!contract.customerSignedContract) { %>
                                Customer needs to upload contract
                                <% } else if (!contract.sellerSignedContract) { %>
                                Seller needs to upload contract
                                <% } %>
                            </span>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Contract Terms -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Contract Terms</h3>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <h4 class="font-medium text-gray-700 mb-2">Project Details</h4>
                            <dl class="space-y-2">
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Project Title</dt>
                                    <dd class="text-sm text-gray-900"><%= contract.project.title %></dd>
                                </div>
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Category</dt>
                                    <dd class="text-sm text-gray-900 capitalize"><%= contract.project.category.replace('-', ' ') %></dd>
                                </div>
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Description</dt>
                                    <dd class="text-sm text-gray-900"><%= contract.project.description %></dd>
                                </div>
                            </dl>
                        </div>
                        
                        <div>
                            <h4 class="font-medium text-gray-700 mb-2">Financial Details</h4>
                            <dl class="space-y-2">
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Contract Value</dt>
                                    <dd class="text-sm text-gray-900">$<%= contract.contractValue.toLocaleString() %></dd>
                                </div>
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Project Timeline</dt>
                                    <dd class="text-sm text-gray-900">
                                        <%= moment(contract.project.timeline.startDate).format('MMM D, YYYY') %> - 
                                        <%= moment(contract.project.timeline.endDate).format('MMM D, YYYY') %>
                                    </dd>
                                </div>
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Duration</dt>
                                    <dd class="text-sm text-gray-900"><%= contract.project.timeline.duration %> days</dd>
                                </div>
                            </dl>
                        </div>
                    </div>

                    <!-- Additional Terms -->
                    <% if (contract.terms && contract.terms.size > 0) { %>
                    <div class="mt-6">
                        <h4 class="font-medium text-gray-700 mb-2">Additional Terms</h4>
                        <div class="bg-gray-50 rounded-lg p-4">
                            <% Array.from(contract.terms.entries()).forEach(([key, value]) => { %>
                            <div class="flex justify-between py-1 border-b border-gray-200 last:border-b-0">
                                <span class="text-sm font-medium text-gray-600 capitalize"><%= key.replace(/([A-Z])/g, ' $1').toLowerCase() %></span>
                                <span class="text-sm text-gray-900"><%= value %></span>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Admin Actions -->
                <% if (contract.status === 'pending-admin' || contract.status === 'correcting') { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Admin Actions</h3>
                    
                    <div class="grid md:grid-cols-3 gap-6">
                        <!-- Approve Contract -->
                        <div class="border border-green-200 rounded-lg p-4">
                            <h4 class="font-semibold text-green-800 mb-3 flex items-center">
                                <i class="fas fa-check-circle mr-2"></i>
                                Approve Contract
                            </h4>
                            <p class="text-green-700 mb-4 text-sm">
                                <% if (contract.project.biddingRounds?.currentRound === 3) { %>
                                <i class="fas fa-trophy mr-1"></i>
                                This contract resulted from three-round competitive bidding. Approval will complete the project.
                                <% } else { %>
                                Approve this contract to generate completion certificates for both parties.
                                <% } %>
                            </p>
                            <form action="/admin/contracts/<%= contract._id %>/approve" method="POST">
                                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                <div class="mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Approval Notes (Optional)</label>
                                    <textarea name="adminNotes" 
                                              rows="3"
                                              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500"
                                              placeholder="Add any notes about this approval..."></textarea>
                                </div>
                                <button type="submit" 
                                        class="w-full bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 flex items-center justify-center"
                                        onclick="return confirm('Approve this contract and generate completion certificates?')">
                                    <i class="fas fa-check mr-2"></i>
                                    <% if (contract.project.biddingRounds?.currentRound === 3) { %>
                                    Approve & Complete Three-Round Bidding
                                    <% } else { %>
                                    Approve & Generate Certificates
                                    <% } %>
                                </button>
                            </form>
                        </div>

                        <!-- Reject Customer Contract -->
                        <div class="border border-red-200 rounded-lg p-4">
                            <h4 class="font-semibold text-red-800 mb-3 flex items-center">
                                <i class="fas fa-user-times mr-2"></i>
                                Reject Customer Contract
                            </h4>
                            <p class="text-red-700 mb-4 text-sm">
                                <% if (contract.rejectionHistory && contract.rejectionHistory.length > 0) { %>
                                <i class="fas fa-exclamation-triangle mr-1"></i>
                                This contract has been rejected <%= contract.rejectionHistory.length %> time(s) before.
                                <% } else if (contract.project.biddingRounds?.currentRound === 3) { %>
                                <i class="fas fa-info-circle mr-1"></i>
                                Rejecting customer contract requires careful consideration.
                                <% } else { %>
                                <i class="fas fa-info-circle mr-1"></i>
                                Rejecting will require customer to re-upload signed document.
                                <% } %>
                            </p>
                            
                            <form action="/admin/contracts/<%= contract._id %>/reject-customer" method="POST">
                                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                
                                <div class="mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Rejection Reason *</label>
                                    <input type="text" 
                                           name="rejectionReason" 
                                           required
                                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                                           placeholder="Specific reason for rejecting customer contract...">
                                </div>
                                
                                <div class="mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Re-upload Deadline (Hours)</label>
                                    <select name="deadlineHours" 
                                            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                                            required>
                                        <option value="24">24 Hours</option>
                                        <option value="48" selected>48 Hours</option>
                                        <option value="72">72 Hours</option>
                                    </select>
                                </div>
                                
                                <button type="submit" 
                                        class="w-full bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 flex items-center justify-center"
                                        onclick="return confirm('Reject customer contract? Customer will be notified to re-upload.')">
                                    <i class="fas fa-times mr-2"></i>
                                    Reject Customer Contract Only
                                </button>
                            </form>
                        </div>

                        <!-- Reject Seller Contract -->
                        <div class="border border-orange-200 rounded-lg p-4">
                            <h4 class="font-semibold text-orange-800 mb-3 flex items-center">
                                <i class="fas fa-user-tie-times mr-2"></i>
                                Reject Seller Contract
                            </h4>
                            <p class="text-orange-700 mb-4 text-sm">
                                <% if (contract.rejectionHistory && contract.rejectionHistory.length > 0) { %>
                                <i class="fas fa-exclamation-triangle mr-1"></i>
                                This contract has been rejected <%= contract.rejectionHistory.length %> time(s) before.
                                <% } else if (contract.project.biddingRounds?.currentRound === 3) { %>
                                <i class="fas fa-info-circle mr-1"></i>
                                Rejecting seller contract requires careful consideration.
                                <% } else { %>
                                <i class="fas fa-info-circle mr-1"></i>
                                Rejecting will require seller to re-upload signed document.
                                <% } %>
                            </p>
                            
                            <form action="/admin/contracts/<%= contract._id %>/reject-seller" method="POST">
                                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                
                                <div class="mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Rejection Reason *</label>
                                    <input type="text" 
                                           name="rejectionReason" 
                                           required
                                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500"
                                           placeholder="Specific reason for rejecting seller contract...">
                                </div>
                                
                                <div class="mb-3">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Re-upload Deadline (Hours)</label>
                                    <select name="deadlineHours" 
                                            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500"
                                            required>
                                        <option value="24">24 Hours</option>
                                        <option value="48" selected>48 Hours</option>
                                        <option value="72">72 Hours</option>
                                    </select>
                                </div>
                                
                                <button type="submit" 
                                        class="w-full bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700 flex items-center justify-center"
                                        onclick="return confirm('Reject seller contract? Seller will be notified to re-upload.')">
                                    <i class="fas fa-times mr-2"></i>
                                    Reject Seller Contract Only
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Certificates Section -->
                <% if (contract.status === 'completed') { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Generated Certificates</h3>
                    
                    <div class="grid md:grid-cols-3 gap-6">
                        <!-- Customer Certificate -->
                        <div class="text-center p-6 bg-green-50 border border-green-200 rounded-lg">
                            <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-user text-xl"></i>
                            </div>
                            <h4 class="font-semibold text-green-800 mb-2 text-lg">Customer Certificate</h4>
                            <p class="text-green-700 text-sm mb-4">Specially formatted for customer records</p>
                            <a href="/admin/contracts/<%= contract._id %>/download-customer-certificate" 
                               target="_blank"
                               class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 inline-flex items-center justify-center w-full">
                                <i class="fas fa-download mr-2"></i>Download Certificate
                            </a>
                            <% if (contract.customerCertificate && contract.customerCertificate.generatedAt) { %>
                            <p class="text-xs text-green-600 mt-2">
                                Generated: <%= moment(contract.customerCertificate.generatedAt).format('MMM D, YYYY h:mm A') %>
                            </p>
                            <% } %>
                        </div>

                        <!-- Seller Certificate -->
                        <div class="text-center p-6 bg-blue-50 border border-blue-200 rounded-lg">
                            <div class="w-16 h-16 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-user-tie text-xl"></i>
                            </div>
                            <h4 class="font-semibold text-blue-800 mb-2 text-lg">Seller Certificate</h4>
                            <p class="text-blue-700 text-sm mb-4">Specially formatted for seller records</p>
                            <a href="/admin/contracts/<%= contract._id %>/download-seller-certificate" 
                               target="_blank"
                               class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 inline-flex items-center justify-center w-full">
                                <i class="fas fa-download mr-2"></i>Download Certificate
                            </a>
                            <% if (contract.sellerCertificate && contract.sellerCertificate.generatedAt) { %>
                            <p class="text-xs text-blue-600 mt-2">
                                Generated: <%= moment(contract.sellerCertificate.generatedAt).format('MMM D, YYYY h:mm A') %>
                            </p>
                            <% } %>
                        </div>

                        <!-- Final Certificate -->
                        <div class="text-center p-6 bg-purple-50 border border-purple-200 rounded-lg">
                            <div class="w-16 h-16 bg-purple-100 text-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-file-contract text-xl"></i>
                            </div>
                            <h4 class="font-semibold text-purple-800 mb-2 text-lg">Final Certificate</h4>
                            <p class="text-purple-700 text-sm mb-4">Complete project completion certificate</p>
                            <a href="/admin/contracts/<%= contract._id %>/download-final-certificate" 
                               target="_blank"
                               class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 inline-flex items-center justify-center w-full">
                                <i class="fas fa-download mr-2"></i>Download Certificate
                            </a>
                            <% if (contract.finalCertificate && contract.finalCertificate.generatedAt) { %>
                            <p class="text-xs text-purple-600 mt-2">
                                Generated: <%= moment(contract.finalCertificate.generatedAt).format('MMM D, YYYY h:mm A') %>
                            </p>
                            <% } %>
                        </div>
                    </div>

                    <!-- Approval Information -->
                    <div class="mt-6 p-4 bg-gray-50 border border-gray-200 rounded-lg">
                        <h4 class="font-semibold text-gray-800 mb-2">Approval Information</h4>
                        <div class="grid grid-cols-2 gap-4 text-sm">
                            <div>
                                <span class="font-medium text-gray-600">Approved By:</span>
                                <span class="ml-2 text-gray-900"><%= contract.adminApprovedBy?.name || 'Admin' %></span>
                            </div>
                            <div>
                                <span class="font-medium text-gray-600">Approved At:</span>
                                <span class="ml-2 text-gray-900"><%= moment(contract.adminApprovedAt).format('MMM D, YYYY h:mm A') %></span>
                            </div>
                            <% if (contract.adminNotes) { %>
                            <div class="col-span-2">
                                <span class="font-medium text-gray-600">Admin Notes:</span>
                                <p class="mt-1 text-gray-900"><%= contract.adminNotes %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Rejection History -->
                <% if (contract.rejectionHistory && contract.rejectionHistory.length > 0) { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Rejection History</h3>
                    
                    <div class="space-y-4">
                        <% contract.rejectionHistory.forEach((rejection, index) => { %>
                        <div class="border <%= rejection.resolved ? 'border-green-200 bg-green-50' : 'border-red-200 bg-red-50' %> rounded-lg p-4">
                            <div class="flex justify-between items-start mb-2">
                                <div>
                                    <p class="font-medium <%= rejection.resolved ? 'text-green-800' : 'text-red-800' %>">
                                        Rejection #<%= index + 1 %> - <%= moment(rejection.rejectedAt).format('MMM D, YYYY h:mm A') %>
                                    </p>
                                    <p class="text-sm <%= rejection.resolved ? 'text-green-700' : 'text-red-700' %> mt-1">
                                        <strong>Reason:</strong> <%= rejection.reason %>
                                    </p>
                                </div>
                                <div class="flex flex-col items-end space-y-1">
                                    <span class="px-2 py-1 <%= rejection.resolved ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %> text-xs rounded-full">
                                        <%= rejection.partyRequired.toUpperCase() %>
                                    </span>
                                    <span class="px-2 py-1 <%= rejection.resolved ? 'bg-green-200 text-green-800' : 'bg-yellow-200 text-yellow-800' %> text-xs rounded-full">
                                        <%= rejection.resolved ? 'RESOLVED' : 'PENDING' %>
                                    </span>
                                </div>
                            </div>
                            <div class="grid grid-cols-2 gap-4 text-sm <%= rejection.resolved ? 'text-green-700' : 'text-red-700' %>">
                                <div>
                                    <span class="font-medium">Deadline:</span>
                                    <span class="ml-2"><%= moment(rejection.deadline).format('MMM D, YYYY h:mm A') %></span>
                                </div>
                                <div>
                                    <span class="font-medium">Rejected By:</span>
                                    <span class="ml-2"><%= rejection.rejectedBy?.name || 'Admin' %></span>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Right Column - Sidebar -->
            <div class="space-y-6">
                <!-- Project Information -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Project Information</h3>
                    
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Project ID</p>
                            <p class="text-sm text-gray-900 font-mono"><%= contract.project._id %></p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Bid ID</p>
                            <p class="text-sm text-gray-900 font-mono"><%= contract.bid._id %></p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Contract ID</p>
                            <p class="text-sm text-gray-900 font-mono"><%= contract._id %></p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Created</p>
                            <p class="text-sm text-gray-900"><%= moment(contract.createdAt).format('MMM D, YYYY h:mm A') %></p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Last Updated</p>
                            <p class="text-sm text-gray-900"><%= moment(contract.updatedAt).format('MMM D, YYYY h:mm A') %></p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Current Step</p>
                            <p class="text-sm text-gray-900">
                                Step <%= contract.currentStep %> of 4
                                <% if (contract.currentStep === 1) { %>- Customer Upload<% } %>
                                <% if (contract.currentStep === 2) { %>- Seller Upload<% } %>
                                <% if (contract.currentStep === 3) { %>- Admin Review<% } %>
                                <% if (contract.currentStep === 4) { %>- Completed<% } %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Customer Information</h3>
                    
                    <div class="space-y-2">
                        <p class="font-medium text-gray-900"><%= contract.customer.name %></p>
                        <p class="text-sm text-gray-600"><%= contract.customer.email %></p>
                        <% if (contract.customer.phone) { %>
                        <p class="text-sm text-gray-600"><i class="fas fa-phone mr-2"></i><%= contract.customer.phone %></p>
                        <% } %>
                        <% if (contract.customer.address) { %>
                        <p class="text-sm text-gray-600">
                            <i class="fas fa-map-marker-alt mr-2"></i>
                            <%= contract.customer.address.street %>, <%= contract.customer.address.city %>, <%= contract.customer.address.state %>
                        </p>
                        <% } %>
                    </div>
                </div>

                <!-- Seller Information -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Seller Information</h3>
                    
                    <div class="space-y-2">
                        <p class="font-medium text-gray-900"><%= contract.seller.name %></p>
                        <p class="text-sm text-gray-600"><%= contract.seller.email %></p>
                        <% if (contract.seller.companyName) { %>
                        <p class="text-sm text-gray-600"><strong><i class="fas fa-building mr-2"></i>Company:</strong> <%= contract.seller.companyName %></p>
                        <% } %>
                        <% if (contract.seller.phone) { %>
                        <p class="text-sm text-gray-600"><i class="fas fa-phone mr-2"></i><%= contract.seller.phone %></p>
                        <% } %>
                        <% if (contract.seller.taxId) { %>
                        <p class="text-sm text-gray-600"><strong><i class="fas fa-id-card mr-2"></i>Tax ID:</strong> <%= contract.seller.taxId %></p>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
                    
                    <div class="space-y-3">
                        <a href="/admin/projects/<%= contract.project._id %>" 
                           class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center justify-center">
                            <i class="fas fa-external-link-alt mr-2"></i>View Project Details
                        </a>
                        
                        <a href="/admin/all-bids?project=<%= contract.project._id %>" 
                           class="w-full bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 flex items-center justify-center">
                            <i class="fas fa-gavel mr-2"></i>View All Bids
                        </a>

                        <!-- Download All Documents -->
                        <div class="border-t border-gray-200 pt-3">
                            <h4 class="font-medium text-gray-700 mb-2">Download Documents</h4>
                            <div class="grid grid-cols-1 gap-2">
                                <% if (contract.customerSignedContract) { %>
                                <a href="/admin/contracts/<%= contract._id %>/download-customer" 
                                   target="_blank"
                                   class="bg-blue-600 text-white px-3 py-2 rounded text-sm hover:bg-blue-700 flex items-center justify-center">
                                    <i class="fas fa-user mr-2"></i>Customer Contract
                                </a>
                                <% } %>
                                <% if (contract.sellerSignedContract) { %>
                                <a href="/admin/contracts/<%= contract._id %>/download-seller" 
                                   target="_blank"
                                   class="bg-green-600 text-white px-3 py-2 rounded text-sm hover:bg-green-700 flex items-center justify-center">
                                    <i class="fas fa-user-tie mr-2"></i>Seller Contract
                                </a>
                                <% } %>
                                <% if (contract.customerTemplate) { %>
                                <a href="/admin/contracts/<%= contract._id %>/download-template/customer" 
                                   target="_blank"
                                   class="bg-gray-600 text-white px-3 py-2 rounded text-sm hover:bg-gray-700 flex items-center justify-center">
                                    <i class="fas fa-file-download mr-2"></i>Customer Template
                                </a>
                                <% } %>
                                <% if (contract.sellerTemplate) { %>
                                <a href="/admin/contracts/<%= contract._id %>/download-template/seller" 
                                   target="_blank"
                                   class="bg-gray-600 text-white px-3 py-2 rounded text-sm hover:bg-gray-700 flex items-center justify-center">
                                    <i class="fas fa-file-download mr-2"></i>Seller Template
                                </a>
                                <% } %>
                            </div>
                        </div>

                        <!-- Download Certificates (if available) -->
                        <% if (contract.status === 'completed') { %>
                        <div class="border-t border-gray-200 pt-3">
                            <h4 class="font-medium text-gray-700 mb-2">Download Certificates</h4>
                            <div class="grid grid-cols-1 gap-2">
                                <a href="/admin/contracts/<%= contract._id %>/download-customer-certificate" 
                                   target="_blank"
                                   class="bg-green-600 text-white px-3 py-2 rounded text-sm hover:bg-green-700 flex items-center justify-center">
                                    <i class="fas fa-user mr-2"></i>Customer Certificate
                                </a>
                                <a href="/admin/contracts/<%= contract._id %>/download-seller-certificate" 
                                   target="_blank"
                                   class="bg-blue-600 text-white px-3 py-2 rounded text-sm hover:bg-blue-700 flex items-center justify-center">
                                    <i class="fas fa-user-tie mr-2"></i>Seller Certificate
                                </a>
                                <a href="/admin/contracts/<%= contract._id %>/download-final-certificate" 
                                   target="_blank"
                                   class="bg-purple-600 text-white px-3 py-2 rounded text-sm hover:bg-purple-700 flex items-center justify-center">
                                    <i class="fas fa-file-contract mr-2"></i>Final Certificate
                                </a>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Contract Timeline -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Contract Timeline</h3>
                    
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="bg-blue-100 text-blue-800 rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold mr-4 mt-0.5">1</div>
                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900">Customer Upload</h4>
                                <p class="text-sm text-gray-600">Customer downloads template, signs, and uploads</p>
                                <% if (contract.customerSignedContract && contract.customerSignedContract.url) { %>
                                <p class="text-xs text-green-600 mt-1">
                                    <i class="fas fa-check-circle mr-1"></i>Completed: <%= moment(contract.customerSignedContract.uploadedAt).format('MMM D, YYYY') %>
                                </p>
                                <% } else { %>
                                <p class="text-xs text-yellow-600 mt-1">
                                    <i class="fas fa-clock mr-1"></i>Pending
                                </p>
                                <% } %>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-green-100 text-green-800 rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold mr-4 mt-0.5">2</div>
                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900">Seller Upload</h4>
                                <p class="text-sm text-gray-600">Seller downloads template, signs, and uploads</p>
                                <% if (contract.sellerSignedContract && contract.sellerSignedContract.url) { %>
                                <p class="text-xs text-green-600 mt-1">
                                    <i class="fas fa-check-circle mr-1"></i>Completed: <%= moment(contract.sellerSignedContract.uploadedAt).format('MMM D, YYYY') %>
                                </p>
                                <% } else { %>
                                <p class="text-xs text-yellow-600 mt-1">
                                    <i class="fas fa-clock mr-1"></i>Pending
                                </p>
                                <% } %>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-purple-100 text-purple-800 rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold mr-4 mt-0.5">3</div>
                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900">Admin Review</h4>
                                <p class="text-sm text-gray-600">Admin reviews both contracts</p>
                                <% if (contract.status === 'completed') { %>
                                <p class="text-xs text-green-600 mt-1">
                                    <i class="fas fa-check-circle mr-1"></i>Approved: <%= moment(contract.adminApprovedAt).format('MMM D, YYYY') %>
                                </p>
                                <% } else if (contract.status === 'pending-admin' || contract.status === 'correcting') { %>
                                <p class="text-xs text-purple-600 mt-1">
                                    <i class="fas fa-shield-alt mr-1"></i>Under Review
                                </p>
                                <% } else { %>
                                <p class="text-xs text-gray-500 mt-1">
                                    <i class="fas fa-clock mr-1"></i>Waiting
                                </p>
                                <% } %>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-indigo-100 text-indigo-800 rounded-full w-8 h-8 flex items-center justify-center text-sm font-bold mr-4 mt-0.5">4</div>
                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900">Certificate Generation</h4>
                                <p class="text-sm text-gray-600">Generate completion certificates</p>
                                <% if (contract.status === 'completed') { %>
                                <p class="text-xs text-green-600 mt-1">
                                    <i class="fas fa-check-circle mr-1"></i>Certificates Generated
                                </p>
                                <% } else { %>
                                <p class="text-xs text-gray-500 mt-1">
                                    <i class="fas fa-clock mr-1"></i>Available after approval
                                </p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-hide flash messages
        setTimeout(() => {
            const flashMessages = document.querySelectorAll('.alert');
            flashMessages.forEach(message => {
                message.style.transition = 'opacity 0.5s ease';
                message.style.opacity = '0';
                setTimeout(() => message.remove(), 500);
            });
        }, 5000);

        // Enhanced confirmation for rejections
        function confirmRejection(action, party) {
            return confirm(`Are you sure you want to ${action} the ${party} contract? This will require them to re-upload within the specified timeframe.`);
        }
    </script>
</body>
</html>