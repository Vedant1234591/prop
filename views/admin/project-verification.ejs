<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify Project - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>
<body class="bg-gray-50">
    <%- include('../partials/header1') %>

    <div class="max-w-6xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages1') %>

        <div class="bg-white shadow rounded-lg p-6">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Verify Project</h1>
                    <p class="text-gray-600">Review project details before approval</p>
                </div>
                <a href="/admin/all-projects" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Projects
                </a>
            </div>

            <!-- Project Status Overview -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-xl font-semibold text-blue-900"><%= project.title %></h2>
                        <p class="text-blue-700">Submitted by: <%= project.customer.name %> on <%= moment(project.createdAt).format('MMM D, YYYY h:mm A') %></p>
                    </div>
                    <div class="text-right">
                        <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
                            <i class="fas fa-clock mr-1"></i>Pending Verification
                        </span>
                    </div>
                </div>
            </div>

            <!-- Project Details -->
            <div class="grid md:grid-cols-2 gap-6 mb-6">
                <!-- Basic Information -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-info-circle mr-2 text-blue-600"></i>
                        Project Information
                    </h3>
                    
                    <div class="space-y-3">
                        <div>
                            <label class="text-sm font-medium text-gray-500">Category</label>
                            <p class="text-gray-900 capitalize"><%= project.category.replace('-', ' ') %></p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Customer</label>
                            <p class="text-gray-900"><%= project.customer.name %></p>
                            <p class="text-sm text-gray-600"><%= project.customer.email %></p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Description</label>
                            <p class="text-gray-900 whitespace-pre-wrap"><%= project.description %></p>
                        </div>
                    </div>
                </div>

                <!-- Bidding & Timeline -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-calendar-alt mr-2 text-green-600"></i>
                        Bidding Details
                    </h3>
                    
                    <div class="space-y-3">
                        <div>
                            <label class="text-sm font-medium text-gray-500">Starting Bid</label>
                            <p class="text-gray-900">$<%= project.bidSettings.startingBid.toLocaleString() %></p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Bid End Date</label>
                            <p class="text-gray-900"><%= moment(project.bidSettings.bidEndDate).format('MMM D, YYYY h:mm A') %></p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Project Timeline</label>
                            <p class="text-gray-900">
                                <%= moment(project.timeline.startDate).format('MMM D, YYYY') %> 
                                to 
                                <%= moment(project.timeline.endDate).format('MMM D, YYYY') %>
                            </p>
                            <p class="text-sm text-gray-600"><%= project.timeline.duration %> days</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location & Contact -->
            <div class="grid md:grid-cols-2 gap-6 mb-6">
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-map-marker-alt mr-2 text-red-600"></i>
                        Location
                    </h3>
                    
                    <div class="space-y-2">
                        <p class="text-gray-900"><%= project.location.address %></p>
                        <p class="text-gray-900"><%= project.location.city %>, <%= project.location.state %> <%= project.location.zipCode %></p>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-phone-alt mr-2 text-purple-600"></i>
                        Contact Information
                    </h3>
                    
                    <div class="space-y-2">
                        <p class="text-gray-900"><%= project.contact.phone %></p>
                        <p class="text-gray-900"><%= project.contact.email || project.customer.email %></p>
                    </div>
                </div>
            </div>

            <!-- Requirements & Specifications -->
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-clipboard-list mr-2 text-orange-600"></i>
                    Project Requirements
                </h3>
                
                <div class="mb-4">
                    <label class="text-sm font-medium text-gray-500">Requirements</label>
                    <p class="text-gray-900 whitespace-pre-wrap"><%= project.requirements %></p>
                </div>

                <% if (project.specifications && project.specifications.size > 0) { %>
                <div>
                    <label class="text-sm font-medium text-gray-500">Specifications</label>
                    <div class="bg-white rounded-lg p-4 mt-2">
                        <% Array.from(project.specifications.entries()).forEach(([key, value]) => { %>
                        <div class="flex justify-between py-2 border-b border-gray-200 last:border-b-0">
                            <span class="text-sm font-medium text-gray-600 capitalize"><%= key %></span>
                            <span class="text-sm text-gray-900"><%= value %></span>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Media Attachments -->
            <% if (project.images && project.images.length > 0) { %>
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-images mr-2 text-indigo-600"></i>
                    Project Images (<%= project.images.length %>)
                </h3>
                
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <% project.images.forEach(image => { %>
                    <div class="border rounded-lg overflow-hidden">
                        <img src="<%= image.url %>" alt="<%= image.filename %>" class="w-full h-24 object-cover">
                    </div>
                    <% }) %>
                </div>
            </div>
            <% } %>
<% if(project.adminStatus != "approved") { %>
            <!-- Verification Actions -->
            <div class="bg-white border border-gray-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Verification Decision</h3>
                <p class="text-gray-600 mb-6">Approve this project to make it visible to sellers for bidding, or reject it with remarks for the customer to address.</p>
                
                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Approve Form -->
                    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                        <h4 class="font-semibold text-green-800 mb-2 flex items-center">
                            <i class="fas fa-check-circle mr-2"></i>
                            Approve Project
                        </h4>
                        <p class="text-green-700 text-sm mb-4">
                            Project will become active and visible to all sellers. Round 1 bidding will start immediately.
                        </p>
                        <form action="/admin/projects/<%= project._id %>/approve" method="POST">
                            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                            <div class="mb-3">
                                <label for="approveRemarks" class="block text-sm font-medium text-gray-700 mb-1">Remarks (Optional)</label>
                                <textarea id="approveRemarks" name="remarks" rows="3" 
                                          class="w-full border border-gray-300 rounded-md shadow-sm p-2 text-sm"
                                          placeholder="Add any positive remarks or notes for the customer..."></textarea>
                            </div>
                            <button type="submit" 
                                    class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition duration-300 flex items-center justify-center"
                                    onclick="return confirm('Approve this project and start Round 1 bidding?')">
                                <i class="fas fa-check mr-2"></i>Approve Project & Start Bidding
                            </button>
                        </form>
                    </div>

                    <!-- Reject Form -->
                    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                        <h4 class="font-semibold text-red-800 mb-2 flex items-center">
                            <i class="fas fa-times-circle mr-2"></i>
                            Reject Project
                        </h4>
                        <p class="text-red-700 text-sm mb-4">
                            Project will be marked as defected and returned to customer for edits and resubmission.
                        </p>
                        <form action="/admin/projects/<%= project._id %>/reject" method="POST">
                            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                            <div class="mb-3">
                                <label for="rejectRemarks" class="block text-sm font-medium text-gray-700 mb-1">Remarks (Required)</label>
                                <textarea id="rejectRemarks" name="remarks" rows="3" required
                                          class="w-full border border-gray-300 rounded-md shadow-sm p-2 text-sm"
                                          placeholder="Explain why the project is being rejected and what needs to be corrected..."></textarea>
                            </div>
                            <button type="submit" 
                                    class="w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition duration-300 flex items-center justify-center"
                                    onclick="return confirm('Reject this project and mark it as defected?')">
                                <i class="fas fa-times mr-2"></i>Reject Project
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <script>
        // Auto-hide flash messages after 5 seconds
        setTimeout(() => {
            const flashMessages = document.querySelectorAll('.alert');
            flashMessages.forEach(message => {
                message.style.transition = 'opacity 0.5s ease';
                message.style.opacity = '0';
                setTimeout(() => message.remove(), 500);
            });
        }, 5000);

        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const rejectForm = document.querySelector('form[action*="reject"]');
            const rejectTextarea = document.getElementById('rejectRemarks');
            
            rejectForm.addEventListener('submit', function(e) {
                if (!rejectTextarea.value.trim()) {
                    e.preventDefault();
                    alert('Please provide rejection remarks to help the customer understand what needs to be corrected.');
                    rejectTextarea.focus();
                }
            });
        });
    </script>
</body>
</html>