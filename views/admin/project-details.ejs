<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Admin - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>
<body class="bg-gray-50">
    <%- include('../partials/header1') %>
    
    <div class="max-w-7xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages1') %>

        <!-- Navigation -->
        <div class="mb-6">
            <a href="/admin/all-projects" class="text-indigo-600 hover:text-indigo-800">
                <i class="fas fa-arrow-left mr-2"></i>Back to All Projects
            </a>
        </div>

        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900"><%= project.title %></h1>
                <p class="text-gray-600 mt-2">Project Details - Admin View</p>
            </div>
            <div class="flex space-x-3">
                <span class="px-4 py-2 rounded-full text-sm font-medium 
                    <%= project.status === 'draft' ? 'bg-gray-100 text-gray-800' : '' %>
                    <%= project.status === 'active' ? 'bg-green-100 text-green-800' : '' %>
                    <%= project.status === 'completed' ? 'bg-blue-100 text-blue-800' : '' %>">
                    <%= project.status.toUpperCase() %>
                </span>
                <% if (project.bidSettings && project.bidSettings.isActive) { %>
                <span class="px-4 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    BIDDING ACTIVE
                </span>
                <% } %>
            </div>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Left Column - Project Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Basic Information -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Information</h2>
                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <h3 class="font-medium text-gray-700 mb-2">Details</h3>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Title:</span>
                                    <span class="font-medium"><%= project.title %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Category:</span>
                                    <span class="font-medium"><%= project.category %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Budget:</span>
                                    <span class="font-medium">$<%= project.budget %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Status:</span>
                                    <span class="font-medium capitalize"><%= project.status %></span>
                                </div>
                            </div>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-700 mb-2">Timeline</h3>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Created:</span>
                                    <span class="font-medium"><%= moment(project.createdAt).format('MMM D, YYYY') %></span>
                                </div>
                                <% if (project.bidSettings && project.bidSettings.endDate) { %>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Bidding Ends:</span>
                                    <span class="font-medium"><%= moment(project.bidSettings.endDate).format('MMM D, YYYY') %></span>
                                </div>
                                <% } %>
                                <% if (project.completedAt) { %>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Completed:</span>
                                    <span class="font-medium"><%= moment(project.completedAt).format('MMM D, YYYY') %></span>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <% if (project.description) { %>
                    <div class="mt-6">
                        <h3 class="font-medium text-gray-700 mb-2">Description</h3>
                        <p class="text-sm text-gray-600"><%= project.description %></p>
                    </div>
                    <% } %>
                </div>

                <!-- Customer Information -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Customer Information</h2>
                    <div class="flex items-center">
                        <div class="flex-shrink-0 h-12 w-12 bg-indigo-100 rounded-full flex items-center justify-center">
                            <span class="text-indigo-800 font-medium">
                                <%= project.customer.name.charAt(0).toUpperCase() %>
                            </span>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-gray-900"><%= project.customer.name %></h3>
                            <p class="text-sm text-gray-500"><%= project.customer.email %></p>
                            <% if (project.customer.phone) { %>
                            <p class="text-sm text-gray-500"><%= project.customer.phone %></p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Bids Section -->
                <% if (project.bids && project.bids.length > 0) { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Bids (<%= project.bids.length %>)</h2>
                    <div class="space-y-4">
                        <% project.bids.forEach(bid => { %>
                        <div class="border border-gray-200 rounded-lg p-4">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="font-medium text-gray-900">$<%= bid.amount.toLocaleString() %></h3>
                                    <p class="text-sm text-gray-500">
                                        Submitted: <%= moment(bid.createdAt).format('MMM D, YYYY') %>
                                    </p>
                                    <p class="text-sm text-gray-500">Status: <span class="capitalize"><%= bid.status %></span></p>
                                </div>
                                <div class="text-right">
                                    <span class="px-2 py-1 text-xs rounded-full 
                                        <%= bid.status === 'submitted' ? 'bg-yellow-100 text-yellow-800' : '' %>
                                        <%= bid.status === 'won' ? 'bg-green-100 text-green-800' : '' %>
                                        <%= bid.status === 'lost' ? 'bg-red-100 text-red-800' : '' %>">
                                        <%= bid.status %>
                                    </span>
                                    <% if (bid.autoWon) { %>
                                    <span class="ml-1 text-xs text-green-600" title="Auto-won by system">
                                        <i class="fas fa-robot"></i>
                                    </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Right Column - Actions & Additional Info -->
            <div class="space-y-6">
                <!-- Quick Actions -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Quick Actions</h2>
                    <div class="space-y-3">
                        <% if (project.bidSettings && project.bidSettings.isActive) { %>
                        <form action="/admin/projects/<%= project._id %>/force-close" method="POST">
                            <button type="submit" 
                                class="w-full flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700"
                                onclick="return confirm('Are you sure you want to force close bidding for this project?')">
                                <i class="fas fa-stop-circle mr-2"></i>Force Close Bidding
                            </button>
                        </form>
                        <% } %>

                        <a href="/admin/all-bids?project=<%= project._id %>" 
                           class="w-full flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                            <i class="fas fa-gavel mr-2"></i>View All Bids
                        </a>
                    </div>
                </div>

                <!-- Selected Bid -->
                <% if (project.selectedBid) { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Winning Bid</h2>
                    <div class="space-y-3">
                        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                            <div class="flex justify-between items-center">
                                <div>
                                    <h3 class="font-bold text-green-900">$<%= project.selectedBid.amount.toLocaleString() %></h3>
                                    <p class="text-sm text-green-700">
                                        <%= project.selectedBid.seller.companyName || project.selectedBid.seller.name %>
                                    </p>
                                </div>
                                <span class="px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">
                                    WINNER
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Contract Information -->
                <% if (contract) { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contract</h2>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Status:</span>
                            <span class="font-medium capitalize"><%= contract.status %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Created:</span>
                            <span class="font-medium"><%= moment(contract.createdAt).format('MMM D, YYYY') %></span>
                        </div>
                        <% if (contract.adminApprovedAt) { %>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Approved:</span>
                            <span class="font-medium"><%= moment(contract.adminApprovedAt).format('MMM D, YYYY') %></span>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>