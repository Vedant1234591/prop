<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notices - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/header') %>

    <div class="max-w-4xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages') %>

        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Notices & Updates</h1>
            <a href="/customer/dashboard" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">
                Back to Dashboard
            </a>
        </div>

        <% if (notices && notices.length > 0) { %>
            <div class="space-y-6">
                <% notices.forEach(notice => { %>
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-start mb-4">
                        <h3 class="text-xl font-semibold text-gray-900"><%= notice.title %></h3>
                        <div class="flex space-x-2">
                            <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-sm capitalize">
                                <%= notice.type %>
                            </span>
                            <% if (notice.priority === 'high') { %>
                            <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm">
                                Important
                            </span>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="prose max-w-none mb-4">
                        <p class="text-gray-700 whitespace-pre-wrap"><%= notice.content %></p>
                    </div>
                    
                    <div class="flex justify-between items-center text-sm text-gray-500">
                        <div>
                            <span>Published: <%= new Date(notice.createdAt).toLocaleDateString() %></span>
                            <% if (notice.endDate) { %>
                            <span class="ml-4">Expires: <%= new Date(notice.endDate).toLocaleDateString() %></span>
                            <% } %>
                        </div>
                        <span>Target: <%= notice.targetAudience.join(', ') %></span>
                    </div>
                </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <i class="fas fa-bell-slash text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">No Notices</h3>
                <p class="text-gray-600">There are no notices at the moment.</p>
            </div>
        <% } %>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>