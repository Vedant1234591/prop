        <% } else if (contract.status === 'completed') { %>
            <!-- Step 4: Completed - Show certificates -->
            <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-green-800 mb-4">✓ Contract Successfully Completed</h3>
                <div class="grid md:grid-cols-3 gap-4 mb-4">
                    <div class="text-center p-4 bg-white rounded-lg border border-green-200">
                        <i class="fas fa-file-contract text-blue-500 text-2xl mb-2"></i>
                        <h4 class="font-semibold text-blue-700 mb-1">Your Certificate</h4>
                        <a href="/customer/download-final-certificate/<%= project.selectedBid %>" 
                           class="text-blue-600 text-sm hover:text-blue-800 inline-block">
