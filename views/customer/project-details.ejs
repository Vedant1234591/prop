<div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contract Process</h2>
    
    <!-- 3-Step Process Visualization -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <% 
            const steps = [
                { number: 1, title: 'Download & Sign', description: 'Download template and sign' },
                { number: 2, title: 'Upload Signed', description: 'Upload your signed contract' },
                { number: 3, title: 'Completed', description: 'Contract fully executed' }
            ];
            
            let currentStep = 0;
            if (contract) {
                currentStep = contract.getCurrentStep ? contract.getCurrentStep() : 1;
            }
            %>
            
            <% steps.forEach((step, index) => { %>
            <div class="flex flex-col items-center flex-1">
                <div class="w-12 h-12 rounded-full 
                    <%= currentStep >= step.number ? 'bg-green-500' : 'bg-gray-300' %> 
                    text-white flex items-center justify-center mx-auto mb-2">
                    <%= currentStep >= step.number ? '✓' : step.number %>
                </div>
                <p class="text-sm font-medium text-gray-700 text-center"><%= step.title %></p>
                <p class="text-xs text-gray-500 text-center hidden md:block"><%= step.description %></p>
                <% if (index < steps.length - 1) { %>
                <div class="hidden md:block w-full h-1 mt-6 
                    <%= currentStep > step.number ? 'bg-green-500' : 'bg-gray-300' %>">
                </div>
                <% } %>
            </div>
            <% }); %>
        </div>
    </div>

    <!-- Contract Actions Based on Current Step -->
    <% if (project.selectedBid && contract) { %>
        <% if (contract.status === 'pending-customer') { %>
            <!-- Step 1: Customer needs to download and upload -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-blue-800 mb-4">Step 1: Download & Sign Your Contract</h3>
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="text-center p-4 bg-white rounded-lg border border-blue-200">
                        <i class="fas fa-file-download text-blue-500 text-3xl mb-3"></i>
                        <h4 class="font-semibold text-blue-700 mb-2">Download Contract Template</h4>
                        <a href="/customer/download-contract-template/<%= project.selectedBid %>" 
                           class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 inline-block mt-2">
                            <i class="fas fa-download mr-2"></i>Download Template
                        </a>
                    </div>
                    <div class="text-center p-4 bg-white rounded-lg border border-blue-200">
                        <i class="fas fa-file-upload text-green-500 text-3xl mb-3"></i>
                        <h4 class="font-semibold text-green-700 mb-2">Upload Signed Contract</h4>
                       <!-- In the upload form, FIX the hidden bidId field -->
