<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Propload</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('../partials/header') %>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <%- include('../partials/flash-messages') %>

        <!-- Real-time Status Header -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <i class="fas fa-sync-alt text-blue-600 mr-2"></i>
                    <span class="text-sm text-blue-700">Real-time status updates active • Automatic winner selection enabled</span>
                </div>
                <div class="flex space-x-2">
                    <a href="/customer/update-statuses" 
                       class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition duration-300 flex items-center">
                        <i class="fas fa-sync-alt mr-1"></i>
                        Update Now
                    </a>
                    <span class="text-xs text-blue-600" id="last-updated">
                        Updated just now
                    </span>
                </div>
            </div>
        </div>

        <!-- Project Header with Featured Image -->
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-gray-900"><%= project.title %></h1>
                    <p class="text-gray-600 mt-2"><%= project.description %></p>
                </div>
                <span class="px-4 py-2 rounded-full text-sm font-medium 
                    <%= project.status === 'drafted' ? 'bg-yellow-100 text-yellow-800' : '' %>
                    <%= project.status === 'in-progress' ? 'bg-blue-100 text-blue-800' : '' %>
                    <%= project.status === 'completed' ? 'bg-green-100 text-green-800' : '' %>
                    <%= project.status === 'failed' ? 'bg-red-100 text-red-800' : '' %>">
                    <%= project.status.replace('-', ' ').toUpperCase() %>
                </span>
            </div>

            <!-- Featured Image -->
            <% if (project.featuredImage && project.featuredImage.url) { %>
            <div class="mb-4">
                <img src="<%= project.featuredImage.url %>" 
                     alt="<%= project.title %>" 
                     class="w-full h-64 object-cover rounded-lg shadow-md">
            </div>
            <% } %>

            <div class="grid md:grid-cols-4 gap-6 text-sm">
                <div class="flex items-center">
                    <i class="fas fa-tag mr-3 text-indigo-500"></i>
                    <div>
                        <p class="text-gray-500">Category</p>
                        <p class="font-medium capitalize"><%= project.category.replace('-', ' ') %></p>
                    </div>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-map-marker-alt mr-3 text-red-500"></i>
                    <div>
                        <p class="text-gray-500">Location</p>
                        <p class="font-medium"><%= project.location.city %>, <%= project.location.state %></p>
                    </div>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-calendar mr-3 text-green-500"></i>
                    <div>
                        <p class="text-gray-500">Timeline</p>
                        <p class="font-medium"><%= moment(project.timeline.startDate).format('MMM D') %> - <%= moment(project.timeline.endDate).format('MMM D, YYYY') %></p>
                    </div>
                </div>
                <div class="flex items-center">
                    <i class="fas fa-dollar-sign mr-3 text-green-500"></i>
                    <div>
                        <p class="text-gray-500">Starting Bid</p>
                        <p class="font-medium">$<%= project.bidSettings.startingBid %></p>
                    </div>
                </div>
            </div>

            <!-- Bid Status -->
            <div class="mt-4 p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-700">Bid Status</p>
                        <p class="text-sm text-gray-600">
                            <% if (project.bidSettings.isActive && new Date() < project.bidSettings.bidEndDate) { %>
                                Accepting bids until <%= moment(project.bidSettings.bidEndDate).format('MMM D, YYYY h:mm A') %>
                                (<%= moment(project.bidSettings.bidEndDate).fromNow() %>)
                            <% } else if (project.selectedBid) { %>
                                <% if (project.selectedBid.autoWon) { %>
                                    <span class="text-green-600 font-semibold">Auto-won</span> by 
                                <% } %>
                                <%= project.selectedBid.seller.companyName || project.selectedBid.seller.name %> for $<%= project.selectedBid.amount %>
                            <% } else { %>
                                Bidding closed - No bids selected
                            <% } %>
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-sm font-medium text-gray-700"><%= bids.length %> Bids Received</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- ENHANCED: Contract Status Section -->
        <% if (contract) { %>
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Contract Status</h2>
            
            <!-- Contract Process Steps -->
            <div class="space-y-4">
                <!-- Customer Contract Step -->
                <div class="flex items-center justify-between p-4 <%= contract.customerSignedContract ? 'bg-green-50 border border-green-200' : 'bg-blue-50 border border-blue-200' %> rounded-lg">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-full <%= contract.customerSignedContract ? 'bg-green-100 text-green-600' : 'bg-blue-100 text-blue-600' %> flex items-center justify-center mr-4">
                            <i class="fas <%= contract.customerSignedContract ? 'fa-check' : 'fa-user' %> text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold <%= contract.customerSignedContract ? 'text-green-800' : 'text-blue-800' %>">Your Contract</h3>
                            <p class="text-sm <%= contract.customerSignedContract ? 'text-green-700' : 'text-blue-700' %>">
                                <%= contract.customerSignedContract ? 'Uploaded Successfully' : 'Ready for Upload' %>
                            </p>
                            <% if (contract.customerSignedContract) { %>
                            <p class="text-xs text-green-600 mt-1">
                                Uploaded: <%= moment(contract.customerSignedContract.uploadedAt).format('MMM D, YYYY h:mm A') %>
                            </p>
                            <% } %>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <% if (contract.customerSignedContract && contract.customerSignedContract.url) { %>
                        <a href="<%= contract.customerSignedContract.url %>" target="_blank"
                           class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
                            <i class="fas fa-download mr-1"></i>Download
                        </a>
                        <% } else { %>
                        <span class="bg-blue-600 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-clock mr-1"></i>Step 1 of 3
                        </span>
                        <% } %>
                    </div>
                </div>

                <!-- Seller Contract Step -->
                <div class="flex items-center justify-between p-4 <%= contract.sellerSignedContract ? 'bg-green-50 border border-green-200' : (contract.customerSignedContract ? 'bg-yellow-50 border border-yellow-200' : 'bg-gray-50 border border-gray-200') %> rounded-lg">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-full <%= contract.sellerSignedContract ? 'bg-green-100 text-green-600' : (contract.customerSignedContract ? 'bg-yellow-100 text-yellow-600' : 'bg-gray-100 text-gray-400') %> flex items-center justify-center mr-4">
                            <i class="fas <%= contract.sellerSignedContract ? 'fa-check' : 'fa-user-tie' %> text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold <%= contract.sellerSignedContract ? 'text-green-800' : (contract.customerSignedContract ? 'text-yellow-800' : 'text-gray-800') %>">Seller Contract</h3>
                            <p class="text-sm <%= contract.sellerSignedContract ? 'text-green-700' : (contract.customerSignedContract ? 'text-yellow-700' : 'text-gray-700') %>">
                                <%= contract.sellerSignedContract ? 'Uploaded Successfully' : (contract.customerSignedContract ? 'Waiting for Seller' : 'Waiting for Your Upload') %>
                            </p>
                            <% if (contract.sellerSignedContract) { %>
                            <p class="text-xs text-green-600 mt-1">
                                Uploaded: <%= moment(contract.sellerSignedContract.uploadedAt).format('MMM D, YYYY h:mm A') %>
                            </p>
                            <% } else if (contract.customerSignedContract) { %>
                            <p class="text-xs text-yellow-600 mt-1">
                                Seller will upload after you complete your part
                            </p>
                            <% } %>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <% if (contract.sellerSignedContract && contract.sellerSignedContract.url) { %>
                        <a href="<%= contract.sellerSignedContract.url %>" target="_blank"
                           class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
                            <i class="fas fa-download mr-1"></i>Download
                        </a>
                        <% } else if (contract.customerSignedContract) { %>
                        <span class="bg-yellow-600 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-clock mr-1"></i>Step 2 of 3
                        </span>
                        <% } else { %>
                        <span class="bg-gray-600 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-lock mr-1"></i>Locked
                        </span>
                        <% } %>
                    </div>
                </div>

                <!-- Admin Approval Step -->
                <div class="flex items-center justify-between p-4 <%= contract.status === 'completed' ? 'bg-green-50 border border-green-200' : (contract.sellerSignedContract ? 'bg-purple-50 border border-purple-200' : 'bg-gray-50 border border-gray-200') %> rounded-lg">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-full <%= contract.status === 'completed' ? 'bg-green-100 text-green-600' : (contract.sellerSignedContract ? 'bg-purple-100 text-purple-600' : 'bg-gray-100 text-gray-400') %> flex items-center justify-center mr-4">
                            <i class="fas <%= contract.status === 'completed' ? 'fa-check-double' : 'fa-shield-alt' %> text-lg"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold <%= contract.status === 'completed' ? 'text-green-800' : (contract.sellerSignedContract ? 'text-purple-800' : 'text-gray-800') %>">Admin Approval</h3>
                            <p class="text-sm <%= contract.status === 'completed' ? 'text-green-700' : (contract.sellerSignedContract ? 'text-purple-700' : 'text-gray-700') %>">
                                <%= contract.status === 'completed' ? 'Approved' : (contract.sellerSignedContract ? 'Pending Review' : 'Waiting for Contracts') %>
                            </p>
                            <% if (contract.status === 'completed') { %>
                            <p class="text-xs text-green-600 mt-1">
                                Approved: <%= moment(contract.updatedAt).format('MMM D, YYYY') %>
                            </p>
                            <% } else if (contract.sellerSignedContract) { %>
                            <p class="text-xs text-purple-600 mt-1">
                                Admin will review both contracts
                            </p>
                            <% } %>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <% if (contract.status === 'completed') { %>
                        <span class="bg-green-600 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-check mr-1"></i>Completed
                        </span>
                        <% } else if (contract.sellerSignedContract) { %>
                        <span class="bg-purple-600 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-clock mr-1"></i>Step 3 of 3
                        </span>
                        <% } else { %>
                        <span class="bg-gray-600 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-lock mr-1"></i>Locked
                        </span>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <div class="grid lg:grid-cols-3 gap-8">
            <!-- Left Column - Project Details -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Project Images Gallery -->
                <% if (project.images && project.images.length > 0) { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Images (<%= project.images.length %>)</h2>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        <% project.images.forEach((image, index) => { %>
                        <div class="relative group">
                            <img src="<%= image.url %>" 
                                 alt="Project image <%= index + 1 %>" 
                                 class="w-full h-32 object-cover rounded-lg shadow-sm cursor-pointer hover:opacity-90 transition duration-300"
                                 onclick="openImageModal('<%= image.url %>')">
                            <% if (project.status === 'drafted') { %>
                            <form action="/customer/project/<%= project._id %>/remove-image/<%= image.public_id %>" method="POST" class="absolute top-2 right-2">
                                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                <button type="submit" 
                                        onclick="return confirm('Are you sure you want to remove this image?')"
                                        class="bg-red-600 text-white p-1 rounded-full opacity-0 group-hover:opacity-100 transition duration-300">
                                    <i class="fas fa-times text-xs"></i>
                                </button>
                            </form>
                            <% } %>
                        </div>
                        <% }) %>
                    </div>
                    
                    <!-- Add Image Form (only for drafted projects) -->
                    <% if (project.status === 'drafted') { %>
                    <div class="mt-4 pt-4 border-t border-gray-200">
                        <form action="/customer/project/<%= project._id %>/add-image" method="POST" enctype="multipart/form-data" class="flex items-center space-x-4">
                            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                            <input type="file" name="image" accept="image/*" required
                                   class="flex-1 text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                            <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition duration-300 text-sm">
                                Add Image
                            </button>
                        </form>
                    </div>
                    <% } %>
                </div>
                <% } %>

                <!-- Project Documents -->
                <% if (project.documents && project.documents.length > 0) { %>
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Documents (<%= project.documents.length %>)</h2>
                    <div class="space-y-3">
                        <% project.documents.forEach((doc, index) => { %>
                        <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-300">
                            <div class="flex items-center space-x-3">
                                <i class="fas fa-file-pdf text-red-500 text-xl"></i>
                                <div>
                                    <p class="font-medium text-gray-900"><%= doc.originalName || doc.filename %></p>
                                    <p class="text-sm text-gray-500">
                                        <%= (doc.bytes / 1024 / 1024).toFixed(2) %> MB • 
                                        <%= new Date(doc.uploadedAt).toLocaleDateString() %>
                                    </p>
                                </div>
                            </div>
                            <a href="<%= doc.url %>" target="_blank" 
                               class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition duration-300 text-sm">
                                Download
                            </a>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <% } %>

                <!-- Requirements -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Requirements</h2>
                    <div class="prose max-w-none">
                        <p class="text-gray-700 whitespace-pre-wrap"><%= project.requirements %></p>
                    </div>
                </div>

                <!-- Bids Section -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">
                        Bids Received (<%= bids.length %>)
                    </h2>
                    
                    <% if (bids.length > 0) { %>
                        <div class="space-y-4">
                            <% bids.forEach(bid => { %>
                            <div class="border border-gray-200 rounded-lg p-4 <%= bid.isSelected ? 'bg-green-50 border-green-200' : '' %>">
                                <div class="flex justify-between items-start mb-3">
                                    <div class="flex items-center space-x-3">
                                        <% if (bid.seller.profileImage && bid.seller.profileImage.url) { %>
                                        <img src="<%= bid.seller.profileImage.url %>" 
                                             alt="<%= bid.seller.companyName || bid.seller.name %>"
                                             class="w-12 h-12 rounded-full object-cover">
                                        <% } else { %>
                                        <div class="w-12 h-12 bg-gray-300 rounded-full flex items-center justify-center">
                                            <i class="fas fa-user text-gray-600"></i>
                                        </div>
                                        <% } %>
                                        <div>
                                            <h3 class="font-semibold text-gray-900">
                                                <%= bid.seller.companyName || bid.seller.name %>
                                            </h3>
                                            <p class="text-sm text-gray-600"><%= bid.seller.email %></p>
                                            <% if (bid.seller.ratings && bid.seller.ratings.average > 0) { %>
                                            <div class="flex items-center mt-1">
                                                <span class="text-yellow-500 text-sm">
                                                    <i class="fas fa-star"></i> <%= bid.seller.ratings.average.toFixed(1) %>
                                                </span>
                                                <span class="text-gray-500 text-sm ml-1">
                                                    (<%= bid.seller.ratings.count %> reviews)
                                                </span>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-2xl font-bold text-green-600">$<%= bid.amount %></p>
                                        <p class="text-sm text-gray-500">
                                            <%= moment(bid.createdAt).format('MMM D, YYYY') %>
                                        </p>
                                    </div>
                                </div>
                                
                                <p class="text-gray-700 mb-3"><%= bid.proposal %></p>
                                
                                <!-- Bid Attachments -->
                                <% if (bid.attachments && bid.attachments.length > 0) { %>
                                <div class="mb-3">
                                    <p class="text-sm font-medium text-gray-700 mb-2">Attachments:</p>
                                    <div class="flex flex-wrap gap-2">
                                        <% bid.attachments.forEach(attachment => { %>
                                        <a href="<%= attachment.url %>" target="_blank" 
                                           class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-gray-200 transition duration-300">
                                            <i class="fas fa-paperclip mr-1"></i>
                                            <%= attachment.originalName || 'Document' %>
                                        </a>
                                        <% }) %>
                                    </div>
                                </div>
                                <% } %>
                                
                                <div class="flex justify-between items-center">
                                    <span class="px-3 py-1 rounded-full text-xs font-medium 
                                        <%= bid.status === 'submitted' ? 'bg-blue-100 text-blue-800' : '' %>
                                        <%= bid.status === 'won' ? 'bg-green-100 text-green-800' : '' %>
                                        <%= bid.status === 'lost' ? 'bg-red-100 text-red-800' : '' %>">
                                        <%= bid.status.toUpperCase() %>
                                    </span>
                                    
                                    <% if (bid.isSelected) { %>
                                    <span class="px-3 py-1 bg-green-100 text-green-800 text-sm rounded-full">
                                        <% if (bid.autoWon) { %>
                                            AUTO-WINNER
                                        <% } else { %>
                                            WINNING BID
                                        <% } %>
                                    </span>
                                    <% } %>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-500 text-center py-8">No bids received yet</p>
                    <% } %>
                </div>
            </div>

            <!-- Right Column - Actions & Info -->
            <div class="space-y-6">
                <!-- Project Actions -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Project Actions</h3>
                    <div class="space-y-3">
                        <% if (project.status === 'drafted') { %>
                        <a href="/customer/edit-project/<%= project._id %>"
                           class="block w-full bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-700 transition duration-300 text-center">
                            Edit Project
                        </a>
                        <form action="/customer/delete-project/<%= project._id %>" method="POST">
                            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                            <button type="submit" 
                                    onclick="return confirm('Are you sure you want to delete this project? This will also delete all uploaded files.')"
                                    class="block w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition duration-300">
                                Delete Project
                            </button>
                        </form>
                        <% } %>
                        
                        <!-- ENHANCED: Contract Actions for Won Projects -->
                        <% if (project.selectedBid && project.status === 'in-progress') { %>
                            <% const winningBid = bids.find(b => b._id.toString() === project.selectedBid.toString()) %>
                            <% if (winningBid) { %>
                            <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
                                <h4 class="font-semibold text-blue-800 mb-3">Contract Process</h4>
                                
                                <% if (contract) { %>
                                    <!-- Customer Contract Upload Section -->
                                    <div class="mb-4">
                                        <h5 class="font-medium text-blue-700 mb-2">Your Contract</h5>
                                        <% if (contract.customerSignedContract && contract.customerSignedContract.url) { %>
                                            <div class="bg-green-50 border border-green-200 rounded p-3 mb-2">
                                                <p class="text-sm text-green-700 flex items-center">
                                                    <i class="fas fa-check-circle mr-2"></i>
                                                    Your contract uploaded successfully
                                                </p>
                                                <a href="<%= contract.customerSignedContract.url %>" target="_blank"
                                                   class="inline-block bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700 transition duration-300 mt-2">
                                                    <i class="fas fa-download mr-1"></i>Download Your Contract
                                                </a>
                                            </div>
                                        <% } else { %>
                                            <div class="bg-yellow-50 border border-yellow-200 rounded p-3 mb-2">
                                                <p class="text-sm text-yellow-700 mb-2">
                                                    <i class="fas fa-info-circle mr-2"></i>
                                                    Start the contract process by uploading your signed contract. Seller will upload theirs after you.
                                                </p>
                                                <form action="/customer/upload-customer-contract" method="POST" enctype="multipart/form-data" class="space-y-2">
                                                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                    <input type="hidden" name="bidId" value="<%= winningBid._id %>">
                                                    <div>
                                                        <label class="block text-xs font-medium text-blue-700 mb-1">Upload Your Signed Contract</label>
                                                        <input type="file" name="contract" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" required 
                                                               class="w-full text-xs text-gray-500 file:mr-2 file:py-1 file:px-2 file:rounded file:border-0 file:text-xs file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                                                    </div>
                                                    <button type="submit" 
                                                            class="w-full bg-green-600 text-white px-3 py-2 rounded text-sm hover:bg-green-700 transition duration-300">
                                                        Start Contract Process
                                                    </button>
                                                </form>
                                            </div>
                                        <% } %>
                                    </div>

                                    <!-- Seller Contract Status -->
                                    <% if (contract.customerSignedContract && contract.customerSignedContract.url) { %>
                                    <div class="mb-4">
                                        <h5 class="font-medium text-blue-700 mb-2">Seller Contract</h5>
                                        <% if (contract.sellerSignedContract && contract.sellerSignedContract.url) { %>
                                            <div class="bg-green-50 border border-green-200 rounded p-3">
                                                <p class="text-sm text-green-700 flex items-center">
                                                    <i class="fas fa-check-circle mr-2"></i>
                                                    Seller contract uploaded
                                                </p>
                                                <a href="<%= contract.sellerSignedContract.url %>" target="_blank"
                                                   class="inline-block bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700 transition duration-300 mt-2">
                                                    <i class="fas fa-download mr-1"></i>Download Seller Contract
                                                </a>
                                            </div>
                                        <% } else { %>
                                            <div class="bg-yellow-50 border border-yellow-200 rounded p-3">
                                                <p class="text-sm text-yellow-700">
                                                    <i class="fas fa-clock mr-2"></i>
                                                    Waiting for seller to upload their contract...
                                                </p>
                                            </div>
                                        <% } %>
                                    </div>
                                    <% } %>

                                    <!-- Admin Approval Status -->
                                    <div>
                                        <h5 class="font-medium text-blue-700 mb-2">Admin Approval</h5>
                                        <% if (contract.status === 'completed') { %>
                                            <div class="bg-green-50 border border-green-200 rounded p-3">
                                                <p class="text-sm text-green-700 flex items-center">
                                                    <i class="fas fa-check-double mr-2"></i>
                                                    Contract fully approved by admin
                                                </p>
                                                <% if (winningBid.certificateGenerated && winningBid.certificateUrl) { %>
                                                <a href="/customer/download-certificate/<%= winningBid._id %>" 
                                                   class="inline-block bg-purple-600 text-white px-3 py-1 rounded text-sm hover:bg-purple-700 transition duration-300 mt-2">
                                                    <i class="fas fa-award mr-1"></i>Download Certificate
                                                </a>
                                                <% } %>
                                            </div>
                                        <% } else if (contract.sellerSignedContract && contract.sellerSignedContract.url) { %>
                                            <div class="bg-purple-50 border border-purple-200 rounded p-3">
                                                <p class="text-sm text-purple-700">
                                                    <i class="fas fa-shield-alt mr-2"></i>
                                                    Waiting for admin to approve both contracts
                                                </p>
                                            </div>
                                        <% } %>
                                    </div>
                                <% } else { %>
                                    <div class="bg-blue-50 border border-blue-200 rounded p-4">
                                        <p class="text-sm text-blue-700 mb-3">
                                            Start the contract process to proceed with the project. You'll upload first, then the seller, followed by admin approval.
                                        </p>
                                        <form action="/customer/upload-customer-contract" method="POST" enctype="multipart/form-data" class="space-y-3">
                                            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                            <input type="hidden" name="bidId" value="<%= winningBid._id %>">
                                            <div>
                                                <label class="block text-sm font-medium text-blue-700 mb-1">Upload Your Signed Contract</label>
                                                <input type="file" name="contract" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" required 
                                                       class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                                            </div>
                                            <button type="submit" 
                                                    class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition duration-300 text-sm">
                                                Start Contract Process
                                            </button>
                                        </form>
                                    </div>
                                <% } %>
                            </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>

                <!-- Timeline -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Project Timeline</h3>
                    <div class="space-y-4">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Bid End</span>
                            <span class="font-medium"><%= moment(project.bidSettings.bidEndDate).format('MMM D, YYYY h:mm A') %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Project Start</span>
                            <span class="font-medium"><%= moment(project.timeline.startDate).format('MMM D, YYYY') %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Project End</span>
                            <span class="font-medium"><%= moment(project.timeline.endDate).format('MMM D, YYYY') %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Duration</span>
                            <span class="font-medium"><%= project.timeline.duration %> days</span>
                        </div>
                    </div>
                </div>

                <!-- Project Status Info -->
                <div class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Status Information</h3>
                    <div class="space-y-3 text-sm">
                        <% if (project.status === 'drafted') { %>
                            <p class="text-yellow-700">
                                <i class="fas fa-info-circle mr-2"></i>
                                Project is in draft mode. Only you can see it.
                            </p>
                            <p class="text-gray-600">
                                It will automatically become active and start accepting bids when the start date arrives.
                            </p>
                        <% } else if (project.status === 'in-progress') { %>
                            <p class="text-blue-700">
                                <i class="fas fa-play-circle mr-2"></i>
                                Project is active and visible to all sellers.
                            </p>
                            <% if (project.selectedBid) { %>
                                <p class="text-green-700">
                                    <i class="fas fa-trophy mr-2"></i>
                                    <% if (project.selectedBid.autoWon) { %>
                                        Winning bid was selected automatically by the system.
                                    <% } else { %>
                                        Winning bid has been selected.
                                    <% } %>
                                </p>
                            <% } %>
                        <% } else if (project.status === 'completed') { %>
                            <p class="text-green-700">
                                <i class="fas fa-check-circle mr-2"></i>
                                Project has been completed successfully.
                            </p>
                        <% } else if (project.status === 'failed') { %>
                            <p class="text-red-700">
                                <i class="fas fa-times-circle mr-2"></i>
                                Project failed to complete within timeline.
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 hidden">
        <div class="max-w-4xl max-h-full">
            <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain">
            <button onclick="closeImageModal()" class="absolute top-4 right-4 text-white text-2xl hover:text-gray-300">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <script>
        function openImageModal(imageUrl) {
            document.getElementById('modalImage').src = imageUrl;
            document.getElementById('imageModal').classList.remove('hidden');
        }

        function closeImageModal() {
            document.getElementById('imageModal').classList.add('hidden');
        }

        // Close modal on ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeImageModal();
            }
        });

        // Update last updated timestamp
        setInterval(() => {
            const now = new Date();
            const lastUpdated = document.getElementById('last-updated');
            if (lastUpdated) {
                lastUpdated.textContent = 'Updated ' + moment(now).fromNow();
            }
        }, 60000);

        // Auto-refresh page every 30 seconds to update real-time status
        setInterval(() => {
            location.reload();
        }, 30000);

        // Enhanced file upload validation
        document.addEventListener('DOMContentLoaded', function() {
            const contractForms = document.querySelectorAll('form[action="/customer/upload-customer-contract"]');
            
            contractForms.forEach(form => {
                const fileInput = form.querySelector('input[type="file"]');
                const submitButton = form.querySelector('button[type="submit"]');
                
                if (fileInput && submitButton) {
                    fileInput.addEventListener('change', function() {
                        const file = this.files[0];
                        if (file) {
                            // Validate file size (10MB limit)
                            const maxSize = 10 * 1024 * 1024; // 10MB in bytes
                            if (file.size > maxSize) {
                                alert('File size must be less than 10MB');
                                this.value = '';
                                submitButton.disabled = true;
                                return;
                            }
                            
                            // Validate file type
                            const allowedTypes = ['application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document', 'image/jpeg', 'image/jpg', 'image/png'];
                            if (!allowedTypes.includes(file.type)) {
                                alert('Please select a valid file type (PDF, DOC, DOCX, JPG, JPEG, PNG)');
                                this.value = '';
                                submitButton.disabled = true;
                                return;
                            }
                            
                            submitButton.disabled = false;
                        }
                    });
                }
            });
        });
    </script>

    <%- include('../partials/footer') %>
</body>
</html>