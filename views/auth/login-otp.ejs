<!-- views/auth/login-otp.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login using OTP - Propload</title>
     <link rel="icon" type="image/png" href="/images/landing/Vector.jpeg">

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />

    <style>
      .bg-propload {
        background-color: #e9e2b3;
      }
      .bg-propload:hover {
        background-color: #dcd39e;
      }
    </style>
  </head>

  <body class="bg-white min-h-screen flex flex-col">
    <div class="shadow-sm w-full px-20">
      <%- include('../partials/landingHeader') %>
    </div>

    <div
      class="mx-10 flex flex-col gap-12 md:flex-row items-center justify-center flex-grow py-10"
    >
      <!-- Left Side: Illustration -->
      <div class="max-h-full md:w-1/2 flex justify-center mb-10 md:mb-0">
        <img
          src="/images/login/login.webp"
          alt="Login Illustration"
          class="w-[40rem] h-[35rem] object-contain"
        />
      </div>

      <!-- Right Side: OTP Login Form -->
      <div
        class="mr-20 md:w-1/2 max-w-md bg-white p-8 rounded-lg border border-gray-100"
      >
        <h2 class="text-3xl font-semibold text-gray-800 mb-6 text-center">
          Login using Email OTP
        </h2>

        <%- include('../partials/flash-messages') %>

        <form
          action="/auth/send-otp"
          method="POST"
          class="space-y-5"
        >
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2"
              >Email Address</label
            >
            <input
              id="email"
              name="email"
              type="email"
              required
              autocomplete="email"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-yellow-200 focus:border-yellow-300"
              placeholder="Enter your registered email"
            />
          </div>

          <button
            class="w-full bg-propload text-gray-800 font-semibold py-2 rounded-md transition duration-200"
          >
            Send OTP
          </button>
        </form>

        <div class="flex items-center justify-center my-6">
          <div class="border-t border-gray-300 w-1/3"></div>
          <span class="px-3 text-gray-500 text-sm">or</span>
          <div class="border-t border-gray-300 w-1/3"></div>
        </div>

        <div class="text-center">
          <a
            href="/auth/login"
            class="w-full inline-block bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 transition duration-200"
          >
            Login using Password
          </a>
        </div>

        <p class="text-center text-gray-600 mt-5">
          Donâ€™t have an account?
          <a
            href="/auth/register?role=customer"
            class="text-blue-600 hover:underline"
            >Join as Customer</a
          >
          or
          <a
            href="/auth/register?role=seller"
            class="text-blue-600 hover:underline"
            >Join as Seller</a
          >
        </p>
      </div>
    </div>
  </body>
</html>
