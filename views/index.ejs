    overflow: hidden;
  }

  /* === Image Animation === */
  .carousel-item img {
    width: 100%;
    height: 100vh;
    min-height: 400px;
    object-fit: cover;
    object-position: center;
    filter: blur(8px) brightness(0.7);
    transform: scale(1.1);
    transition: none;
  }

  /* Active image: continuous zoom + blur animation */
  .carousel-item.active img {
    animation: zoomBlur 6s linear forwards;
  }

  @keyframes zoomBlur {
    0%   { transform: scale(1.1); filter: blur(0px); }
    100% { transform: scale(1.3); filter: blur(6px); }
  }

  /* === Text and Caption Styling === */
  .carousel-caption {
    top: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    z-index: 5;
    padding: 0 1rem;
  }

  .carousel-caption h2 {
    font-size: 5rem;
    font-weight: 350;
    color: #fff;
    /* text-shadow: 3px 3px 8px rgba(53, 53, 53, 0.7); */
    margin-bottom: 4rem;
    opacity: 0;
    animation: slideUp 6s ease-in-out forwards;
  }

  .carousel-caption p {
    font-size: 1.5rem;
    font-weight: 500;
    color: #fff;
     margin-bottom: 3rem;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.6);
    opacity: 0;
    max-width: 800px;
    animation: slideUp 8s ease-in-out forwards;
    animation-delay: 0.2s;
  }

  .carousel-caption .btn {
    font-size: 1.1rem;
    border-radius: 0.5rem;
    padding: 0.8rem 2.5rem;
    transition: all 0.3s ease;
    opacity: 0;
    animation: slideUp 6s ease-in-out forwards;
    animation-delay: 0.4s;
  }

  .carousel-caption .btn:hover {
    transform: scale(1.05);
  }

  /* === Upward Motion Keyframes === */
  @keyframes slideUp {
    0%   { opacity: 0; transform: translateY(60px) scale(0.95); }
    20%  { opacity: 0.5; transform: translateY(30px) scale(1.0); }
    60%  { opacity: 1; transform: translateY(0) scale(1.05); }
    100% { opacity: 1; transform: translateY(0) scale(1.1); }
  }

  /* === Carousel Controls === */
  .carousel-control-prev,
  .carousel-control-next {
    width: 3rem;
    height: 3rem;
    background-color: #e9e2b3;
    border-radius: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 50%;
    transform: translateY(-50%);
  }

  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    filter: invert(1);
  }

  /* === Card Hover Effects === */
  .custom-card {
    transition: all 0.4s ease;
