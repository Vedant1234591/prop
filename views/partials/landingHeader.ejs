<header class="bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-4 py-6 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <a href="/">
        <img
          src="\images\landing\Logo.png"
          alt="Propload Logo"
          class="h-10 w-auto"
        />
      </a>
    </div>

    <!-- Navigation -->
    <nav class="space-x-6">
      <div class="hidden md:flex space-x-6">
        <a
          href="/"
          style="color: #40788e"
          class="text-lg transition duration-300"
          >Home</a
        >
        <a
          href="/about"
          style="color: #40788e"
          class="text-lg transition duration-300"
          >About Us</a
        >
        <a
          href="/blogs"
          style="color: #40788e"
          class="text-lg transition duration-300"
          >Our Blogs</a
        >
        <a
          href="/store"
          style="color: #40788e"
          class="text-lg transition duration-300"
          >Store</a
        >
        <a
          href="/contact"
          style="color: #40788e"
          class="text-lg transition duration-300"
          >Contact Us</a
        >
      </div>
    </nav>

    <!-- CTA Buttons -->
    <div class="space-x-4">
      <!-- Seller Button -->
      <a
        href="/auth/register?role=seller"
        class="px-6 py-2 font-semibold text-white transition-colors duration-300 inline-block"
        style="background-color: #40788e"
        onmouseover="this.style.backgroundColor='#2f5e6b';"
        onmouseout="this.style.backgroundColor='#40788e';"
      >
        Join as Seller
      </a>

      <!-- Customer Button -->
      <a
        href="/auth/register?role=customer"
        class="px-6 py-2 font-semibold text-white transition-colors duration-300 inline-block"
        style="background-color: #40788e"
        onmouseover="this.style.backgroundColor='#2f5e6b';"
        onmouseout="this.style.backgroundColor='#40788e';"
      >
        Join as Customer
      </a>
    </div>
  </div>
</header>
