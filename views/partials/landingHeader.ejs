<link rel="stylesheet" href="/css/landing.css" />

<header class="container-fluid py-3">
  <div class="container d-flex justify-content-between align-items-center">
    <a href="/">
      <img
        src="/images/landing/logo.png"
        alt="Propload Logo"
        style="height: 50px"
      />
    </a>
    <nav>
      <ul class="d-flex list-unstyled mb-0">
        <li class="mx-2">
          <a href="/" class="text-primary-custom">Home</a>
        </li>
        <li class="mx-2">
          <a href="/about" class="text-primary-custom">About Us</a>
        </li>
        <li class="mx-2">
          <a href="/blogs" class="text-primary-custom">Our Blogs</a>
        </li>
        <li class="mx-2">
          <a href="/store" class="text-primary-custom">Store</a>
        </li>
        <li class="mx-2">
          <a href="/contact" class="text-primary-custom">Contact Us</a>
        </li>
      </ul>
    </nav>

    <div class="d-flex align-items-center">
      <div class="d-flex align-items-center">
        <a href="/auth/login" class="btn btn-primary-custom mx-1">Login</a>

        <div class="dropdown mx-1">
          <button
            class="btn btn-primary-custom dropdown-toggle"
            type="button"
            id="joinDropdown"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Sign up
          </button>
          <ul class="dropdown-menu" aria-labelledby="joinDropdown">
            <li>
              <a class="dropdown-item" href="/auth/register?role=seller"
                >Join as Seller</a
              >
            </li>
            <li>
              <a class="dropdown-item" href="/auth/register?role=customer"
                >Join as Customer</a
              >
            </li>
          </ul>
        </div>
      </div>

      <style>
        @media (min-width: 768px) {
          .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
          }
        }

        /* Optional: smooth hover feel */
        .dropdown-menu {
          transition: all 0.15s ease;
        }
      </style>
    </div>
  </div>
</header>
